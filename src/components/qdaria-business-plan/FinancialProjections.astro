  .bp-grid-2,
  .bp-grid-3 {
    margin-bottom: 2rem;
  }

  ul.bp-body-small {
    padding-left: 1.5rem;
    margin: 0.5rem 0;
  }

  ul.bp-body-small li {
    margin-bottom: 0.5rem;
  }
