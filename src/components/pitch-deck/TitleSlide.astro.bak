---
import { Card } from '../ui/card';
import { Badge } from '../ui/badge';
import { Sparkles, TrendingUp } from 'lucide-react';

const companies = [
  'Volkswagen', 'Mercedes-Benz', 'BMW', 'Equinor', 'DNB',
  'Telenor', 'Siemens', 'Bosch', 'BASF'
];
---

<div class="space-y-8 font-['Inter',sans-serif]">
  {/* Hero Section */}
  <div class="text-center space-y-6">
    <div class="space-y-4">
      <img src="/QDaria.svg" alt="QDaria Wordmark" class="w-96 mx-auto" />
      <Badge className="px-4 py-2 text-lg bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-500 hover:to-cyan-500 border border-cyan-400/50 mb-4">
        Norway's First Commercial Quantum Computer Company
      </Badge>
      <h1 class="text-4xl font-bold text-red-400 mb-4">
        Norway's Quantum Computing Gap Crisis
      </h1>
      <p class="text-2xl text-slate-300 font-light tracking-wide mb-4">
        QDaria: Acquiring Rigetti Novera QPU to Make Norway Quantum-Ready
      </p>
      <div class="flex justify-center items-center gap-2 text-lg text-orange-400">
        <Sparkles className="w-6 h-6" />
        <span>First-Mover Advantage in Nordic Quantum Computing</span>
        <Sparkles className="w-6 h-6" />
      </div>
    </div>
  </div>

  {/* Platform Overview */}
  <Card className="qdaria-card p-8 border-2">
    <h2 class="text-3xl font-bold mb-8 text-center qdaria-gradient-text">Platform Suite</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <div class="text-center space-y-4 group">
        <div class="qdaria-product-container zipminator h-16 flex items-center justify-center">
          <img src="/Zipminator.svg" alt="Zipminator" class="w-16 h-16 mx-auto transition-transform group-hover:scale-110 qdaria-icon-red" />
        </div>
        <h3 class="font-bold text-lg qdaria-gradient-text">Zipminator</h3>
        <p class="text-sm text-slate-300">Post-Quantum Cryptography</p>
      </div>
      <div class="text-center space-y-4 group">
        <div class="qdaria-product-container qm9 h-16 flex items-center justify-center">
          <img src="/Qm9.svg" alt="Qm9" class="w-16 h-16 mx-auto transition-transform group-hover:scale-110 qdaria-icon-primary" />
        </div>
        <h3 class="font-bold text-lg qdaria-gradient-text">Qm9</h3>
        <p class="text-sm text-slate-300">FinTech Solutions</p>
      </div>
      <div class="text-center space-y-4 group">
        <div class="qdaria-product-container qmike h-16 flex items-center justify-center">
          <img src="/QMike.svg" alt="QMike" class="w-16 h-16 mx-auto transition-transform group-hover:scale-110 qdaria-icon-green" />
        </div>
        <h3 class="font-bold text-lg qdaria-gradient-text">QMike</h3>
        <p class="text-sm text-slate-300">HPC & Engineering</p>
      </div>
      <div class="text-center space-y-4 group">
        <div class="qdaria-product-container qdiana h-16 flex items-center justify-center">
          <img src="/QDiana.svg" alt="QDiana" class="w-16 h-16 mx-auto transition-transform group-hover:scale-110 qdaria-icon-purple" />
        </div>
        <h3 class="font-bold text-lg qdaria-gradient-text">QDiana</h3>
        <p class="text-sm text-slate-300">Education Platform</p>
      </div>
    </div>
  </Card>

  {/* Target Companies */}
  <Card className="qdaria-card p-8 border-2">
    <div class="flex items-center gap-3 mb-6">
      <TrendingUp className="w-8 h-8 text-red-400" />
      <h2 class="text-2xl font-bold qdaria-gradient-text">Norway & Northern Europe: Quantum Computing Gap</h2>
    </div>
    <div class="flex flex-wrap gap-3">
      {companies.map((company) => (
        <Badge
          key={company}
          className="px-4 py-2 text-base bg-gradient-to-r from-slate-700 to-slate-800 hover:from-slate-600 hover:to-slate-700 border border-cyan-400/30 hover:border-cyan-400/50 transition-all shadow-lg"
        >
          {company}
        </Badge>
      ))}
    </div>
    <div class="mt-6 p-4 bg-gradient-to-r from-red-500/10 to-orange-500/10 rounded-lg border border-red-400/20">
      <p class="text-slate-300 font-medium">
        <span class="text-red-400 font-bold">Zero</span> commercial quantum computers in Norway •
        <span class="text-orange-400 font-bold">€441B</span> Nordic digital transformation at risk •
        <span class="text-yellow-400 font-bold">Rigetti Novera QPU</span> is the solution
      </p>
    </div>
  </Card>

  {/* Strategic Partners */}
  <Card className="qdaria-card p-8 border-2">
    <h2 class="text-3xl font-bold mb-8 text-center qdaria-gradient-text">Strategic Partnership Framework</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="text-center space-y-4">
        <img src="/Rigetti.svg" alt="Rigetti" class="h-16 mx-auto" />
        <h3 class="text-xl font-bold qdaria-gradient-text">Quantum Hardware Partner</h3>
        <p class="text-slate-300">Rigetti Novera QPU - Making Norway Quantum-Ready</p>
        <Badge className="px-3 py-1 bg-gradient-to-r from-purple-600 to-pink-600 border border-purple-400/50">
          Hardware Acquisition Target
        </Badge>
      </div>
      <div class="text-center space-y-4">
        <img src="/management-events.svg" alt="Management Events" class="h-16 mx-auto" />
        <h3 class="text-xl font-bold qdaria-gradient-text">European Expansion Partner</h3>
        <p class="text-slate-300">Strategic Partnership: 60 Prime European Executive Meetings</p>
        <Badge className="px-3 py-1 bg-gradient-to-r from-green-600 to-emerald-600 border border-green-400/50">
          Market Access Partnership
        </Badge>
      </div>
    </div>
  </Card>

  {/* Presenter Info */}
  <div class="text-center">
    <p class="text-slate-400 text-lg">
      Presented by <span class="qdaria-gradient-text font-semibold">QDaria Team</span> • 2024 Investor Series
    </p>
  </div>
</div>