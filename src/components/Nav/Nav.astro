<style>
  .navbar--scrolled {
    @apply border-b-base-800 bg-dark-bg/50 backdrop-blur;
  }

  .navbar--initial {
    @apply border-b-transparent bg-transparent;
  }

  .nav-logo {
    @apply relative rounded-lg border border-primary-500/30 bg-dark-bg px-3 py-1.5 transition-all;
    box-shadow: 0 0 25px rgba(4, 163, 255, 0.4);

    &:hover {
      box-shadow: 0 0 35px rgba(4, 163, 255, 0.6);
    }

    &::before {
      content: "";
      @apply absolute inset-0 rounded-lg;
      background: radial-gradient(
        600px circle at var(--mouse-x, 0) var(--mouse-y, 0),
        rgba(4, 163, 255, 0.2),
        transparent 40%
      );
      opacity: 0;
      transition: opacity 0.3s;
    }

    &:hover::before {
      opacity: 1;
    }
  }

  .nav-button {
    @apply relative rounded-lg border border-primary-500/30 bg-dark-bg px-3 py-1.5 transition-all;
    box-shadow: 0 0 15px rgba(4, 163, 255, 0.2);

    &:hover {
      box-shadow: 0 0 25px rgba(4, 163, 255, 0.4);
    }

    &::before {
      content: "";
      @apply absolute inset-0 rounded-lg;
      background: radial-gradient(
        600px circle at var(--mouse-x, 0) var(--mouse-y, 0),
        rgba(4, 163, 255, 0.1),
        transparent 40%
      );
      opacity: 0;
      transition: opacity 0.3s;
    }

    &:hover::before {
      opacity: 1;
    }
  }

  .nav-item-wrapper {
    @apply relative;

    .nav-item-underline {
      @apply absolute -bottom-1 left-0 h-0.5 w-0 bg-primary-500 transition-all duration-300;
    }

    &:hover .nav-item-underline {
      @apply w-full;
    }
  }

  :global(.nav-item) {
    @apply text-base-200 transition-all;
  }

  :global(.nav-dropdown-item) {
    @apply rounded-lg px-3 py-1.5 text-base-200 transition-all hover:bg-primary-500/10;
  }

  .mobile-nav-toggle {
    @apply transition-colors duration-200;

    &[aria-expanded="true"] {
      @apply bg-base-800;
    }
  }
</style>

<script>
  function initMobileNav() {
    const mobileNav = document.getElementById('mobile-nav');
    const toggle = document.getElementById('mobile-nav-toggle');
    
    if (!mobileNav || !toggle) return;

    function handleToggle(e: Event) {
      e.preventDefault();
      e.stopPropagation();

      const isExpanded = toggle?.getAttribute('aria-expanded') === 'true';
      const newState = !isExpanded;
      
      toggle?.setAttribute('aria-expanded', newState.toString());
      mobileNav?.setAttribute('aria-hidden', (!newState).toString());
      
      // Toggle body scroll
      document.body.style.overflow = newState ? 'hidden' : '';
      
      // Toggle backdrop
      if (newState) {
        document.body.classList.add('overflow-hidden', 'backdrop-blur');
      } else {
        document.body.classList.remove('overflow-hidden', 'backdrop-blur');
      }
    }

    // Add click and touch handlers
    toggle?.addEventListener('click', handleToggle);
    toggle?.addEventListener('touchend', handleToggle);

    // Handle outside clicks
    const handleOutsideClick = (e: MouseEvent) => {
      const target = e.target as HTMLElement;
      if (toggle?.getAttribute('aria-expanded') === 'true' &&
          !mobileNav?.contains(target) &&
          !toggle?.contains(target)) {
        handleToggle(e);
      }
    };

    // Handle escape key
    const handleEscapeKey = (e: KeyboardEvent) => {
      if (e.key === 'Escape' && toggle?.getAttribute('aria-expanded') === 'true') {
        handleToggle(e);
      }
    };

    document.addEventListener('click', handleOutsideClick);
    document.addEventListener('keydown', handleEscapeKey);

    return () => {
      toggle?.removeEventListener('click', handleToggle);
      toggle?.removeEventListener('touchend', handleToggle);
      document.removeEventListener('click', handleOutsideClick);
      document.removeEventListener('keydown', handleEscapeKey);
    };
  }

  // Initialize on page load
  let cleanup: (() => void) | undefined;
  cleanup = initMobileNav();

  // Re-initialize after Astro page transitions
  document.addEventListener('astro:page-load', () => {
    if (cleanup) cleanup();
    cleanup = initMobileNav();
  });

  document.addEventListener('astro:after-swap', () => {
    if (cleanup) cleanup();
    cleanup = initMobileNav();
  });
</script>
