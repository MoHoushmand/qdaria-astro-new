---
/**
 * Professional Font Loader for Business Plan Deck
 * Optimizes font loading with preconnect, preload, and display:swap
 * Uses Inter font for professional, highly readable typography
 */
---

<!-- Preconnect to Google Fonts for faster loading -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

<!-- Load Inter font with optimal weights for business content -->
<link
  href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
  rel="stylesheet"
>

<style is:global>
  /**
   * Global Typography Settings
   * Applies professional font stack and rendering optimizations
   */

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI',
                 Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue',
                 sans-serif;

    /* Font Rendering Optimizations */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;

    /* Improved text quality on all devices */
    font-feature-settings: 'kern' 1;
    font-kerning: normal;
  }

  /* Optimize font rendering for headings */
  h1, h2, h3, h4, h5, h6 {
    text-rendering: optimizeLegibility;
    font-feature-settings: 'kern' 1;
  }

  /* Tabular numbers for financial data */
  .tabular-nums,
  .business-plan-metric,
  .bp-metric,
  .business-plan-table td {
    font-variant-numeric: tabular-nums;
    font-feature-settings: 'tnum' 1;
  }

  /* Optimize number spacing */
  .business-plan-metric,
  .bp-metric {
    font-feature-settings: 'tnum' 1, 'kern' 1;
  }

  /* Prevent font size inflation on mobile */
  html {
    -webkit-text-size-adjust: 100%;
    -moz-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;
    text-size-adjust: 100%;
  }

  /* Improve hyphenation for long text */
  .business-plan-body,
  .bp-body,
  .business-plan-lead,
  .bp-lead {
    hyphens: auto;
    -webkit-hyphens: auto;
    -moz-hyphens: auto;
    hyphenate-limit-chars: 8 4 3;
  }

  /* Prevent orphans and widows in print/long text */
  p {
    orphans: 3;
    widows: 3;
  }

  /* OpenType features for professional typography */
  .business-plan-body,
  .bp-body,
  article,
  .prose {
    font-feature-settings:
      'kern' 1,           /* Kerning */
      'liga' 1,           /* Common ligatures */
      'clig' 1,           /* Contextual ligatures */
      'calt' 1;           /* Contextual alternates */
  }
</style>
