---
import { Icon } from "astro-icon";
import ContactForm from "./Forms/ContactForm.astro";
import Badge from "./Badge/Badge.astro";

const contactInfo = {
  email: "contact@qdaria.com",
  phone: "+47 9807 9896",
  address: "Innovation Park Oslo, 0123 Oslo, Norway"
};
---

<section id="contact" class="py-16 md:py-20">
  <div class="site-container relative">
    <div class="mx-auto mb-16 text-center md:max-w-2xl" data-aos="fade-up">
      <Badge>Contact Us</Badge>
      <div class="flex justify-center">
        <h2 class="h2 mb-4">Get in Touch</h2>
      </div>
      <p class="description text-pretty text-lg md:text-xl">
        Interested in our quantum solutions? Contact us to discuss how we can help transform your organization with Topological Quantum Computing.
      </p>
    </div>

    <div class="mx-auto grid max-w-6xl gap-12 lg:grid-cols-2">
      <!-- Contact Information Card with Glow Effect -->
      <div 
        class="rounded-xl border border-blue-500/30 bg-gray-950/80 p-8 shadow-[0_0_15px_rgba(0,0,255,0.2)] transition-all hover:shadow-[0_0_25px_rgba(0,0,255,0.4)]" 
        data-aos="fade-up" 
        data-aos-delay=".1"
      >
        <div class="space-y-8">
          <div>
            <h3 class="mb-6 text-2xl font-medium text-gray-100">Contact Information</h3>
            <div class="space-y-4">
              <div class="flex items-center gap-3 transition-transform hover:translate-x-2">
                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-blue-500/10">
                  <Icon name="tabler/mail" class="h-5 w-5 text-blue-400" />
                </div>
                <a href={`mailto:${contactInfo.email}`} class="text-gray-300 hover:text-blue-400">
                  {contactInfo.email}
                </a>
              </div>
              <div class="flex items-center gap-3 transition-transform hover:translate-x-2">
                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-blue-500/10">
                  <Icon name="tabler/phone" class="h-5 w-5 text-blue-400" />
                </div>
                <a href={`tel:${contactInfo.phone}`} class="text-gray-300 hover:text-blue-400">
                  {contactInfo.phone}
                </a>
              </div>
              <div class="flex items-center gap-3 transition-transform hover:translate-x-2">
                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-blue-500/10">
                  <Icon name="tabler/map-pin" class="h-5 w-5 text-blue-400" />
                </div>
                <span class="text-gray-300">{contactInfo.address}</span>
              </div>
            </div>
          </div>

          <div>
            <h3 class="mb-6 text-2xl font-medium text-gray-100">Connect With Us</h3>
            <div class="rounded-lg bg-blue-500/5 p-6">
              <p class="mb-4 text-gray-300">
                Reach out for:
              </p>
              <ul class="space-y-2 text-gray-400">
                <li class="flex items-center gap-2">
                  <Icon name="tabler/circle-check" class="h-4 w-4 text-blue-400" />
                  Quantum computing solutions and consulting
                </li>
                <li class="flex items-center gap-2">
                  <Icon name="tabler/circle-check" class="h-4 w-4 text-blue-400" />
                  Partnership opportunities
                </li>
                <li class="flex items-center gap-2">
                  <Icon name="tabler/circle-check" class="h-4 w-4 text-blue-400" />
                  Investment inquiries
                </li>
                <li class="flex items-center gap-2">
                  <Icon name="tabler/circle-check" class="h-4 w-4 text-blue-400" />
                  Career opportunities in quantum technology
                </li>
                <li class="flex items-center gap-2">
                  <Icon name="tabler/circle-check" class="h-4 w-4 text-blue-400" />
                  Media and press inquiries
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form Card with Glow Effect -->
      <div 
        class="rounded-xl border border-blue-500/30 bg-gray-950/80 p-8 shadow-[0_0_15px_rgba(0,0,255,0.2)] transition-all hover:shadow-[0_0_25px_rgba(0,0,255,0.4)]" 
        data-aos="fade-up" 
        data-aos-delay=".2"
      >
        <ContactForm />
      </div>
    </div>
  </div>
</section>

<style>
  .hover-glow {
    transition: all 0.3s ease-in-out;
  }
  
  .hover-glow:hover {
    box-shadow: 0 0 25px rgba(0, 0, 255, 0.4);
    transform: translateY(-2px);
  }
</style>
