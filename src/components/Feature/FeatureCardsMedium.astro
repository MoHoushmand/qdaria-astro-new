---
// components
import FeatureCard from "@components/FeatureCard/FeatureCardMedium.astro";
import Badge from "@components/Badge/Badge.astro";

interface FeatureData {
  icon: string;
  title: string;
  text: string;
}

// data - Future applications of topological quantum computing (research goals, not current capabilities)
const featureData: FeatureData[] = [
  {
    icon: "tabler/molecule",
    title: "Quantum Chemistry",
    text: "Topological qubits could enable precise simulation of molecular interactions and electron correlations, potentially transforming drug discovery and materials science once the technology matures.",
  },
  {
    icon: "tabler/cpu",
    title: "Inherent Error Protection",
    text: "The topological approach offers built-in error protection through braiding operations, potentially eliminating the overhead of traditional error correction schemes - a key research goal we're pursuing.",
  },
  {
    icon: "tabler/chart-arrows",
    title: "Optimization Potential",
    text: "Braiding-based quantum gates could enable efficient exploration of solution spaces for logistics, portfolio management, and machine learning - applications we're researching for future implementation.",
  },
  {
    icon: "qdaria/shield-lock",
    title: "Post-Quantum Security",
    text: "Topological quantum computing could contribute to cryptographic infrastructure that's resistant to quantum attacks, an important area of our ongoing research collaboration.",
  },
  {
    icon: "qdaria/chart-dots",
    title: "Quantum Machine Learning",
    text: "We're exploring how topological quantum circuits could accelerate AI training and enable quantum neural networks with improved stability and scalability.",
  },
  {
    icon: "qdaria/school",
    title: "Research & Development",
    text: "Our team is developing the theoretical and experimental foundations needed to bring topological quantum computing from research to practical applications.",
  },
];
---

<section id="feature-cards-medium" class="overflow-hidden py-12 md:py-16">
  <div class="site-container">
    <div class="mx-auto mb-16 text-center md:max-w-2xl" data-aos="fade-up">
      <Badge>Research Focus</Badge>
      <h2 class="h2 mb-4">Future Applications</h2>
      <p class="description text-pretty text-lg md:text-xl">
        We're researching how Fibonacci anyon-based topological quantum computing could enable breakthrough applications across industries through inherent error protection and scalability.
      </p>
    </div>
    <div
      id="trigger-medium-cards"
      class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3"
      data-aos="fade-up"
    >
      {
        featureData.map((feature, idx) => (
          <FeatureCard
            title={feature.title}
            text={feature.text}
            icon={feature.icon}
          />
        ))
      }
    </div>
  </div>
</section>
