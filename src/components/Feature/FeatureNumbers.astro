---
// components
import Badge from "@components/Badge/Badge.astro";
import FeatureCard from "@components/FeatureCard/FeatureCardColorText2.astro";

interface FeatureCardData {
  icon: string;
  title: string;
  text: string;
}

// data
const featureData: FeatureCardData[] = [
  {
    icon: "tabler/molecule",
    title: "99.99%",
    text: "Quantum error protection through Fibonacci anyons",
  },
  {
    icon: "tabler/cpu",
    title: "1000x",
    text: "Extended coherence through topological protection",
  },
  {
    icon: "tabler/chart-arrows",
    title: "100+",
    text: "Topologically protected logical qubits",
  },
  {
    icon: "qdaria/shield-lock",
    title: "10‚Å∂",
    text: "Braiding operations per second",
  },
];
---

<section id="feature-numbers" class="py-16 md:py-20">
  <div class="site-container">
    <div class="mr-auto max-w-xl">
      <div class="flex" data-aos="fade-up" data-aos-trigger="#feature-numbers">
        <Badge>Quantum Performance</Badge>
      </div>
      <h2
        class="h2"
        data-aos="fade-up"
        data-aos-delay=".1"
        data-aos-trigger="#feature-numbers"
      >
        Breakthrough Quantum Metrics
      </h2>
      <p
        class="description"
        data-aos="fade-up"
        data-aos-delay=".2"
        data-aos-trigger="#feature-numbers"
      >
        Our topological quantum computing platform achieves unprecedented performance metrics through the unique properties of Fibonacci anyons, enabling stable and scalable quantum computation.
      </p>
    </div>

    <div
      id="feature-numbers-cards"
      class="mt-8 grid gap-10 gap-y-16 xs:grid-cols-2 md:mt-16 md:grid-cols-4"
    >
      {
        featureData.map((feature, idx) => (
          <FeatureCard
            title={feature.title}
            text={feature.text}
            icon={feature.icon}
            data-aos="fade-up"
            data-aos-delay={`${idx * 0.25 + 0}`}
            data-aos-trigger="#feature-numbers-cards"
          />
        ))
      }
    </div>
  </div>
</section>
