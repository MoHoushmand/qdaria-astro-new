---
/**
 * Nomenclature/Symbol definitions component for academic papers
 * Usage: <Nomenclature items={[{symbol: "λ", definition: "Lyapunov exponent"}]} />
 */
interface NomenclatureItem {
  symbol: string;
  definition: string;
  unit?: string;
}

interface Props {
  items: NomenclatureItem[];
  title?: string;
}

const { items, title = "Nomenclature" } = Astro.props;
---

<section class="nomenclature-section my-12">
  <h2 class="text-2xl font-bold text-cyan-400 mb-6 flex items-center gap-3">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
    </svg>
    {title}
  </h2>

  <div class="overflow-x-auto">
    <table class="w-full border-collapse">
      <thead>
        <tr class="border-b border-cyan-400/30">
          <th class="text-left py-3 px-4 text-cyan-400 font-semibold w-24">Symbol</th>
          <th class="text-left py-3 px-4 text-cyan-400 font-semibold">Definition</th>
          <th class="text-left py-3 px-4 text-cyan-400 font-semibold w-32">Unit</th>
        </tr>
      </thead>
      <tbody>
        {items.map((item, index) => (
          <tr class={`border-b border-slate-700/50 ${index % 2 === 0 ? 'bg-slate-800/20' : ''}`}>
            <td class="py-3 px-4 font-mono text-orange-400">
              <Fragment set:html={item.symbol} />
            </td>
            <td class="py-3 px-4 text-gray-300">{item.definition}</td>
            <td class="py-3 px-4 text-gray-400 font-mono text-sm">{item.unit || '—'}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
</section>
