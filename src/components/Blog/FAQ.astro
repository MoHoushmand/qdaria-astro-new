---
/**
 * FAQ component for blog articles with collapsible items and glowing effects
 * Usage: <FAQ items={[{question: "...", answer: "..."}]} />
 */
interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  items: FAQItem[];
  title?: string;
}

const { items, title = "Frequently Asked Questions" } = Astro.props;
---

<section class="faq-section">
  <div class="faq-header">
    <svg class="header-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    <h3 class="header-title">{title}</h3>
    <span class="faq-count">{items.length} questions</span>
  </div>

  <div class="faq-list">
    {items.map((item, index) => (
      <details class="faq-item" id={`faq-${index + 1}`}>
        <summary class="faq-question">
          <span class="question-number">Q{index + 1}</span>
          <span class="question-text">{item.question}</span>
          <svg class="chevron-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </summary>
        <div class="faq-answer">
          <Fragment set:html={item.answer} />
        </div>
      </details>
    ))}
  </div>
</section>

<style>
  .faq-section {
    position: relative;
    margin: 2.5rem 0;
    padding: 1.5rem;
    background: rgba(0, 2, 18, 0.4);
    border: 1px solid rgba(4, 163, 255, 0.25);
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(4, 163, 255, 0.1);
    transition: all 0.3s ease;
  }

  .faq-section:hover {
    border-color: rgba(4, 163, 255, 0.4);
    box-shadow:
      0 0 25px rgba(4, 163, 255, 0.15),
      0 6px 30px rgba(4, 163, 255, 0.12);
  }

  .faq-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.25rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid rgba(4, 163, 255, 0.2);
  }

  .header-icon {
    width: 1.5rem;
    height: 1.5rem;
    color: #04a3ff;
  }

  .header-title {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 700;
    background: linear-gradient(135deg, #04a3ff 0%, #00ced1 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    flex: 1;
  }

  .faq-count {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.5);
    padding: 4px 10px;
    background: rgba(4, 163, 255, 0.1);
    border-radius: 12px;
  }

  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .faq-item {
    border: 1px solid rgba(4, 163, 255, 0.15);
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .faq-item:hover {
    border-color: rgba(4, 163, 255, 0.35);
    box-shadow: 0 0 15px rgba(4, 163, 255, 0.1);
  }

  .faq-item[open] {
    border-color: rgba(4, 163, 255, 0.5);
    box-shadow:
      0 0 20px rgba(4, 163, 255, 0.15),
      0 4px 20px rgba(4, 163, 255, 0.1);
  }

  .faq-question {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: rgba(4, 163, 255, 0.05);
    cursor: pointer;
    list-style: none;
    transition: all 0.2s ease;
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .faq-question:hover {
    background: rgba(4, 163, 255, 0.1);
  }

  .faq-item[open] .faq-question {
    background: rgba(4, 163, 255, 0.12);
    border-bottom: 1px solid rgba(4, 163, 255, 0.2);
  }

  .question-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 32px;
    height: 32px;
    background: linear-gradient(135deg, #04a3ff 0%, #0389d6 100%);
    color: white;
    font-weight: 700;
    font-size: 0.8rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(4, 163, 255, 0.3);
  }

  .question-text {
    flex: 1;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.95);
    line-height: 1.4;
  }

  .chevron-icon {
    width: 1.25rem;
    height: 1.25rem;
    color: #04a3ff;
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  .faq-item[open] .chevron-icon {
    transform: rotate(180deg);
  }

  .faq-answer {
    padding: 1.25rem;
    background: rgba(0, 0, 0, 0.2);
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.7;
    font-size: 0.95rem;
  }

  .faq-answer :global(a) {
    color: #04a3ff;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .faq-answer :global(a:hover) {
    color: #00ced1;
    text-decoration: underline;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .faq-section {
      padding: 1rem;
    }

    .faq-question {
      padding: 0.875rem 1rem;
    }

    .question-number {
      min-width: 28px;
      height: 28px;
      font-size: 0.75rem;
    }

    .question-text {
      font-size: 0.9rem;
    }

    .faq-answer {
      padding: 1rem;
      font-size: 0.875rem;
    }
  }
</style>
