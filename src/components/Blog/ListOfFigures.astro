---
/**
 * List of Figures component for academic papers
 * Usage: <ListOfFigures figures={[{number: 1, caption: "...", page: "..."}]} />
 */
interface FigureItem {
  number: number;
  caption: string;
  id?: string;
}

interface Props {
  figures: FigureItem[];
  title?: string;
}

const { figures, title = "List of Figures" } = Astro.props;
---

<section class="list-of-figures-section my-12">
  <h2 class="text-2xl font-bold text-cyan-400 mb-6 flex items-center gap-3">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
    </svg>
    {title}
  </h2>

  <div class="space-y-2">
    {figures.map((fig) => (
      <a
        href={fig.id ? `#${fig.id}` : `#figure-${fig.number}`}
        class="flex items-start gap-4 p-3 rounded-lg hover:bg-slate-800/50 transition-colors group"
      >
        <span class="font-mono text-cyan-400 font-semibold whitespace-nowrap">
          Figure {fig.number}
        </span>
        <span class="text-gray-300 group-hover:text-white transition-colors flex-1">
          {fig.caption}
        </span>
      </a>
    ))}
  </div>
</section>
