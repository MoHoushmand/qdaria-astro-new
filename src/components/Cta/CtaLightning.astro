<section class="relative overflow-hidden bg-dark-bg py-24">
  <div class="relative z-10">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="cta-card mx-auto max-w-2xl rounded-3xl border border-primary-500/30 bg-dark-bg p-8 text-center">
        <h2 class="text-gradient-blue mb-4 text-3xl font-bold tracking-tight sm:text-4xl">
          Transform Your Business with Quantum Power
        </h2>
        <p class="mb-8 text-lg text-base-400">
          Experience the next evolution in computing technology. Partner with us to unlock unprecedented computational capabilities.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="/contact"
            class="nav-button inline-flex items-center justify-center rounded-lg bg-primary-500 px-6 py-3 text-lg font-medium text-white shadow-lg transition-all hover:bg-primary-600"
          >
            Get Started
          </a>
          <a
            href="/whitepaper"
            class="nav-button inline-flex items-center justify-center rounded-lg border border-primary-500 bg-transparent px-6 py-3 text-lg font-medium text-primary-500 transition-all hover:bg-primary-500 hover:text-white"
          >
            Read Whitepaper
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .text-gradient-blue {
    @apply bg-gradient-to-r from-[#04a3ff] via-[#00ffd3] to-[#65ff00] bg-clip-text text-transparent;
  }

  .cta-card {
    box-shadow: 0 0 25px rgba(4, 163, 255, 0.4);

    &:hover {
      box-shadow: 0 0 35px rgba(4, 163, 255, 0.6);
    }

    &::before {
      content: '';
      @apply absolute inset-0 rounded-3xl;
      background: radial-gradient(
        800px circle at var(--mouse-x, 0) var(--mouse-y, 0),
        rgba(4, 163, 255, 0.2),
        transparent 40%
      );
      opacity: 0;
      transition: opacity 0.3s;
    }

    &:hover::before {
      opacity: 1;
    }
  }

  .nav-button {
    @apply relative;
    box-shadow: 0 0 15px rgba(4, 163, 255, 0.2);

    &:hover {
      box-shadow: 0 0 25px rgba(4, 163, 255, 0.4);
    }

    &::before {
      content: '';
      @apply absolute inset-0 rounded-lg;
      background: radial-gradient(
        600px circle at var(--mouse-x, 0) var(--mouse-y, 0),
        rgba(4, 163, 255, 0.1),
        transparent 40%
      );
      opacity: 0;
      transition: opacity 0.3s;
    }

    &:hover::before {
      opacity: 1;
    }
  }
</style>

<script>
  function updateMousePosition(e: MouseEvent) {
    const target = e.currentTarget as HTMLElement;
    const rect = target.getBoundingClientRect();
    const x = e.clientX - rect.left;
    const y = e.clientY - rect.top;
    target.style.setProperty('--mouse-x', `${x}px`);
    target.style.setProperty('--mouse-y', `${y}px`);
  }

  function initCta() {
    document.querySelectorAll('.cta-card, .nav-button').forEach((el) => {
      el.addEventListener('mousemove', updateMousePosition);
    });
  }

  // Initialize on page load
  initCta();

  // Re-initialize after Astro page transitions
  document.addEventListener('astro:page-load', initCta);
  document.addEventListener('astro:after-swap', initCta);
</script>
