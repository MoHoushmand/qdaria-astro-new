        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-16 md:py-20">
      <div class="site-container">
        <div class="feature-card group relative mx-auto max-w-4xl overflow-hidden rounded-xl p-8 transition-all duration-500 hover:scale-[1.02]">
