---
import BaseLayout from "../layouts/BaseLayout.astro";
import ClipPathReveal from "../components/Animation/ClipPathReveal.astro";
import ScrollReveal from "../components/Animation/ScrollReveal.astro";
import Hover3DEffect from "../components/Animation/Hover3DEffect.astro";
import FlowingBorder from "../components/Animation/FlowingBorder.astro";
import VideoTransition from "../components/Animation/VideoTransition.astro";
import QuantumCircuit from "../components/Three/QuantumCircuit.astro";

const advantages = [
  {
    title: "Topological Protection",
    description: "Our Fibonacci anyons provide inherent error protection through topological properties, achieving 99.99% error resistance.",
    icon: "shield"
  },
  {
    title: "Extended Coherence",
    description: "1000x longer coherence times compared to traditional qubits, enabling complex quantum computations.",
    icon: "clock"
  },
  {
    title: "Scalable Architecture",
    description: "Designed for seamless scaling to 100+ logical qubits while maintaining stability and performance.",
    icon: "scale"
  },
  {
    title: "Quantum Error Correction",
    description: "Built-in error correction through topological protection, reducing overhead and complexity.",
    icon: "check"
  }
];

const applications = [
  {
    title: "Financial Modeling",
    description: "Quantum algorithms for portfolio optimization and risk analysis",
    readiness: "Production Ready",
    availability: "Q2 2025"
  },
  {
    title: "Drug Discovery",
    description: "Molecular simulation for pharmaceutical research",
    readiness: "Beta Testing",
    availability: "Q3 2025"
  },
  {
    title: "Climate Modeling",
    description: "Complex environmental system simulations",
    readiness: "Development",
    availability: "Q4 2025"
  },
  {
    title: "Cryptography",
    description: "Post-quantum encryption and security solutions",
    readiness: "Production Ready",
    availability: "Q1 2025"
  }
];

const milestones = [
  {
    date: "May 2025",
    title: "First Quantum Computer in Norway",
    description: "Launch of the Rigetti Novera QPU, marking Norway's entry into quantum computing infrastructure."
  },
  {
    date: "June 2025",
    title: "Topological Quantum Computer",
    description: "Unveiling of our large-scale topological quantum computer featuring Fibonacci anyons."
  },
  {
    date: "October 2024",
    title: "IQT New York",
    description: "CEO presentation on breakthrough achievements in topological quantum computing."
  },
  {
    date: "May 2026",
    title: "IQT Nordics",
    description: "Hosting the prestigious quantum technology conference in Oslo."
  }
];
---

<BaseLayout title="Quantum Computing - QDaria">
  <main class="relative">
    <!-- Hero Section -->
    <section class="min-h-screen flex items-center relative overflow-hidden">
      <VideoTransition>
        <div class="absolute inset-0 bg-gradient-to-r from-base-950 to-transparent z-10"></div>
        <video
          class="absolute inset-0 w-full h-full object-cover"
          autoplay
          loop
          muted
          playsinline
        >
          <source src="/videos/quantum-animation.mp4" type="video/mp4" />
        </video>
      </VideoTransition>

      <div class="relative z-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32">
        <ClipPathReveal>
          <h1 class="text-6xl md:text-7xl font-bold text-white mb-8">
            Pioneering<br />Fault-Tolerant<br />Quantum Computing
          </h1>
        </ClipPathReveal>
        
        <ScrollReveal>
          <p class="text-xl md:text-2xl text-base-200 max-w-3xl mb-12">
            QDaria is revolutionizing quantum computing through topological protection with Fibonacci anyons, achieving unprecedented error resistance and scalability.
          </p>
        </ScrollReveal>

        <ScrollReveal delay={200}>
          <div class="flex gap-6">
            <Hover3DEffect>
              <FlowingBorder>
                <a href="/contact" class="inline-block px-8 py-4 text-lg font-semibold text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition">
                  Get Started
                </a>
              </FlowingBorder>
            </Hover3DEffect>
            <Hover3DEffect>
              <FlowingBorder>
                <a href="#advantages" class="inline-block px-8 py-4 text-lg font-semibold text-white border-2 border-white hover:bg-white hover:text-base-950 rounded-lg transition">
                  Learn More
                </a>
              </FlowingBorder>
            </Hover3DEffect>
          </div>
        </ScrollReveal>
      </div>
    </section>

    <!-- Quantum Circuit Visualization -->
    <section class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ScrollReveal>
          <div class="aspect-video rounded-2xl overflow-hidden">
            <QuantumCircuit />
          </div>
        </ScrollReveal>
      </div>
    </section>

    <!-- Key Advantages -->
    <section id="advantages" class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ScrollReveal>
          <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
            Technological Advantages
          </h2>
        </ScrollReveal>

        <div class="grid md:grid-cols-2 gap-8">
          {advantages.map((advantage, index) => (
            <ScrollReveal delay={index * 100}>
              <Hover3DEffect>
                <FlowingBorder>
                  <div class="p-8 rounded-xl bg-white dark:bg-base-800">
                    <h3 class="text-2xl font-bold text-base-950 dark:text-white mb-4">
                      {advantage.title}
                    </h3>
                    <p class="text-base-700 dark:text-base-300">
                      {advantage.description}
                    </p>
                  </div>
                </FlowingBorder>
              </Hover3DEffect>
            </ScrollReveal>
          ))}
        </div>
      </div>
    </section>

    <!-- Applications -->
    <section class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ScrollReveal>
          <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
            Industry Applications
          </h2>
        </ScrollReveal>

        <div class="grid md:grid-cols-2 gap-8">
          {applications.map((app, index) => (
            <ScrollReveal delay={index * 100}>
              <Hover3DEffect>
                <FlowingBorder>
                  <div class="p-8 rounded-xl bg-white dark:bg-base-800">
                    <div class="flex justify-between items-start mb-4">
                      <h3 class="text-2xl font-bold text-base-950 dark:text-white">
                        {app.title}
                      </h3>
                      <span class="inline-block px-3 py-1 text-sm font-medium text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/20 rounded-full">
                        {app.readiness}
                      </span>
                    </div>
                    <p class="text-base-700 dark:text-base-300 mb-4">
                      {app.description}
                    </p>
                    <p class="text-sm text-base-500 dark:text-base-400">
                      Available: {app.availability}
                    </p>
                  </div>
                </FlowingBorder>
              </Hover3DEffect>
            </ScrollReveal>
          ))}
        </div>
      </div>
    </section>

    <!-- Milestones -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ScrollReveal>
          <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
            Upcoming Milestones
          </h2>
        </ScrollReveal>

        <div class="grid md:grid-cols-2 gap-8">
          {milestones.map((milestone, index) => (
            <ScrollReveal delay={index * 100}>
              <Hover3DEffect>
                <FlowingBorder>
                  <div class="p-8 rounded-xl bg-white dark:bg-base-800">
                    <div class="flex items-center mb-4">
                      <span class="inline-block px-3 py-1 text-sm font-medium text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/20 rounded-full">
                        {milestone.date}
                      </span>
                    </div>
                    <h3 class="text-2xl font-bold text-base-950 dark:text-white mb-4">
                      {milestone.title}
                    </h3>
                    <p class="text-base-700 dark:text-base-300">
                      {milestone.description}
                    </p>
                  </div>
                </FlowingBorder>
              </Hover3DEffect>
            </ScrollReveal>
          ))}
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <ScrollReveal>
          <h2 class="text-4xl font-bold text-base-950 dark:text-white mb-8">
            Join the Quantum Revolution
          </h2>
          <p class="text-xl text-base-700 dark:text-base-300 mb-12 max-w-3xl mx-auto">
            Ready to explore the possibilities of quantum computing? Contact us to learn how our technology can transform your organization.
          </p>
          <div class="flex justify-center gap-6">
            <Hover3DEffect>
              <FlowingBorder>
                <a href="/contact" class="inline-block px-8 py-4 text-lg font-semibold text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition">
                  Contact Us
                </a>
              </FlowingBorder>
            </Hover3DEffect>
            <Hover3DEffect>
              <FlowingBorder>
                <a href="/whitepaper" class="inline-block px-8 py-4 text-lg font-semibold text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 rounded-lg transition">
                  Read Whitepaper
                </a>
              </FlowingBorder>
            </Hover3DEffect>
          </div>
        </ScrollReveal>
      </div>
    </section>
  </main>
</BaseLayout>
