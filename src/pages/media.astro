---
import BaseLayout from "@layouts/BaseLayout.astro";
import Badge from "@components/Badge/Badge.astro";
import Button from "@components/Button/Button.astro";

const pageTitle = "Media | QDaria Quantum Technologies";
const description = "Stay updated with QDaria's latest news, press releases, and media resources about our quantum computing innovations.";

const newsItems = [
  {
    date: "March 15, 2024",
    title: "QDaria Announces Breakthrough in Quantum Error Correction",
    category: "Technology",
    summary: "Revolutionary advancement in quantum error correction using Fibonacci anyons demonstrates unprecedented stability in quantum computations.",
    coverage: [
      "Featured in Quantum Computing Today",
      "Technical analysis in Nature Quantum",
      "Industry spotlight coverage"
    ]
  },
  {
    date: "February 28, 2024",
    title: "Strategic Partnership with Rigetti Computing Announced",
    category: "Business",
    summary: "Collaboration aims to accelerate development of quantum computing solutions through combined expertise and resources.",
    coverage: [
      "Business Wire coverage",
      "Industry analyst reports",
      "Technology media features"
    ]
  },
  {
    date: "January 15, 2024",
    title: "QDaria Launches Educational Initiative",
    category: "Education",
    summary: "New program aims to make quantum computing education accessible through innovative learning platforms.",
    coverage: [
      "Education Technology coverage",
      "University partnerships announced",
      "Community impact stories"
    ]
  }
];

const pressReleases = [
  {
    date: "March 1, 2024",
    title: "QDaria Secures Series B Funding",
    summary: "Investment will accelerate development of quantum computing solutions and market expansion.",
    highlights: [
      "Significant funding secured",
      "Strategic investors joined",
      "Growth plans outlined"
    ]
  },
  {
    date: "February 15, 2024",
    title: "New Research Center Opening",
    summary: "State-of-the-art facility will advance quantum computing research and development.",
    highlights: [
      "Advanced research capabilities",
      "Collaboration opportunities",
      "Innovation focus"
    ]
  },
  {
    date: "January 30, 2024",
    title: "Product Line Expansion",
    summary: "New quantum computing solutions address growing market demands.",
    highlights: [
      "New products launched",
      "Market needs addressed",
      "Technology advancement"
    ]
  }
];

const mediaResources = [
  {
    title: "Brand Assets",
    description: "Official logos, images, and brand guidelines for media use.",
    items: [
      "Company logos",
      "Product images",
      "Team photos",
      "Brand guidelines"
    ]
  },
  {
    title: "Technical Resources",
    description: "Detailed information about our quantum computing technology.",
    items: [
      "Technology whitepapers",
      "Research papers",
      "Technical specifications",
      "Case studies"
    ]
  },
  {
    title: "Media Kit",
    description: "Comprehensive information package for media professionals.",
    items: [
      "Company overview",
      "Executive bios",
      "Product information",
      "Media contacts"
    ]
  }
];
---

<BaseLayout title={pageTitle} description={description}>
  <main class="flex-1">
    <!-- Hero Section -->
    <section class="py-16 md:py-20">
      <div class="site-container">
        <div class="mx-auto max-w-4xl text-center">
          <Badge>Media Center</Badge>
          <h1 class="h1 mb-8">Latest News & Updates</h1>
          <p class="description mx-auto mb-8 max-w-2xl text-lg md:text-xl">
            Stay informed about QDaria's latest developments in quantum computing technology.
          </p>
        </div>
      </div>
    </section>

    <!-- News Section -->
    <section class="py-16 md:py-20">
      <div class="site-container">
        <div class="mx-auto mb-16 text-center md:max-w-2xl">
          <Badge>News</Badge>
          <h2 class="h2 mb-4">Recent News</h2>
          <p class="description text-lg md:text-xl">
            Latest updates and coverage about QDaria's innovations and achievements.
          </p>
        </div>
        <div class="mx-auto grid max-w-6xl gap-8 sm:grid-cols-2 lg:grid-cols-3">
          {newsItems.map((item) => (
            <div class="rounded-xl border border-blue-500/30 bg-gray-950/80 p-8 shadow-[0_0_15px_rgba(0,0,255,0.2)] transition-all hover:shadow-[0_0_25px_rgba(0,0,255,0.4)]">
              <div class="mb-4 flex items-center justify-between">
                <span class="text-sm text-blue-400">{item.date}</span>
                <Badge>{item.category}</Badge>
              </div>
              <h3 class="h4 mb-4">{item.title}</h3>
              <p class="description mb-6">
                {item.summary}
              </p>
              <div>
                <h4 class="text-sm font-medium text-blue-400">Media Coverage</h4>
                <ul class="mt-2 space-y-2">
                  {item.coverage.map((point) => (
                    <li class="flex items-start gap-2">
                      <span class="mt-1 text-blue-400">•</span>
                      <span>{point}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Press Releases -->
    <section class="py-16 md:py-20">
      <div class="site-container">
        <div class="mx-auto mb-16 text-center md:max-w-2xl">
          <Badge>Press</Badge>
          <h2 class="h2 mb-4">Press Releases</h2>
          <p class="description text-lg md:text-xl">
            Official announcements and company updates.
          </p>
        </div>
        <div class="mx-auto grid max-w-6xl gap-8 sm:grid-cols-2 lg:grid-cols-3">
          {pressReleases.map((release) => (
            <div class="rounded-xl border border-blue-500/30 bg-gray-950/80 p-8 shadow-[0_0_15px_rgba(0,0,255,0.2)] transition-all hover:shadow-[0_0_25px_rgba(0,0,255,0.4)]">
              <p class="mb-4 text-sm text-blue-400">{release.date}</p>
              <h3 class="h4 mb-4">{release.title}</h3>
              <p class="description mb-6">
                {release.summary}
              </p>
              <div>
                <h4 class="text-sm font-medium text-blue-400">Key Highlights</h4>
                <ul class="mt-2 space-y-2">
                  {release.highlights.map((point) => (
                    <li class="flex items-start gap-2">
                      <span class="mt-1 text-blue-400">•</span>
                      <span>{point}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Media Resources -->
    <section class="py-16 md:py-20">
      <div class="site-container">
        <div class="mx-auto mb-16 text-center md:max-w-2xl">
          <Badge>Resources</Badge>
          <h2 class="h2 mb-4">Media Resources</h2>
          <p class="description text-lg md:text-xl">
            Download official media assets and information.
          </p>
        </div>
        <div class="mx-auto grid max-w-6xl gap-8 sm:grid-cols-2 lg:grid-cols-3">
          {mediaResources.map((resource) => (
            <div class="rounded-xl border border-blue-500/30 bg-gray-950/80 p-8 shadow-[0_0_15px_rgba(0,0,255,0.2)] transition-all hover:shadow-[0_0_25px_rgba(0,0,255,0.4)]">
              <h3 class="h4 mb-4">{resource.title}</h3>
              <p class="description mb-6">
                {resource.description}
              </p>
              <div>
                <h4 class="text-sm font-medium text-blue-400">Available Resources</h4>
                <ul class="mt-2 space-y-2">
                  {resource.items.map((item) => (
                    <li class="flex items-start gap-2">
                      <span class="mt-1 text-blue-400">•</span>
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-16 md:py-20">
      <div class="site-container">
        <div class="mx-auto max-w-4xl rounded-xl border border-blue-500/30 bg-gray-950/80 p-8 text-center shadow-[0_0_15px_rgba(0,0,255,0.2)] transition-all hover:shadow-[0_0_25px_rgba(0,0,255,0.4)]">
          <h2 class="h2 mb-4">Media Inquiries</h2>
          <p class="description mx-auto mb-8 max-w-2xl text-lg">
            For press inquiries and media resources, please contact our media relations team.
          </p>
          <Button
            variant="primary"
            href="/contact"
            class="rounded-lg border border-blue-500/30 bg-gray-950 px-6 py-3 text-gray-300 shadow-[0_0_15px_rgba(0,0,255,0.2)] transition-all hover:shadow-[0_0_25px_rgba(0,0,255,0.4)]"
          >
            Contact Media Relations
          </Button>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
