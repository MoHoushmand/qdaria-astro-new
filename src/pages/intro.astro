---
import BaseLayout from "../layouts/BaseLayout.astro";
import ClipPathReveal from "../components/Animation/ClipPathReveal.astro";
import ScrollReveal from "../components/Animation/ScrollReveal.astro";
import Hover3DEffect from "../components/Animation/Hover3DEffect.astro";
import FlowingBorder from "../components/Animation/FlowingBorder.astro";
import VideoTransition from "../components/Animation/VideoTransition.astro";

const highlights = [
  {
    title: "99.99%",
    subtitle: "Error Protection",
    description: "Unprecedented error resistance through topological protection"
  },
  {
    title: "1000x",
    subtitle: "Coherence Time",
    description: "Extended quantum state stability compared to traditional qubits"
  },
  {
    title: "100+",
    subtitle: "Logical Qubits",
    description: "Scalable architecture for practical quantum applications"
  }
];

const innovations = [
  {
    title: "Topological Quantum Computing",
    description: "Our groundbreaking approach uses Fibonacci anyons to create inherently stable qubits, revolutionizing quantum error correction.",
    icon: "quantum"
  },
  {
    title: "Quantum-Enhanced AI",
    description: "Integrating quantum computing with advanced AI to deliver unprecedented computational capabilities and intelligent solutions.",
    icon: "ai"
  },
  {
    title: "Industry Applications",
    description: "From cybersecurity to financial modeling, our quantum solutions address real-world challenges across sectors.",
    icon: "industry"
  }
];
---

<BaseLayout title="Introduction to QDaria - Pioneering Quantum Technologies">
  <main class="relative">
    <!-- Hero Section -->
    <section class="min-h-screen flex items-center relative overflow-hidden">
      <VideoTransition>
        <div class="absolute inset-0 bg-gradient-to-r from-base-950 to-transparent z-10"></div>
        <video
          class="absolute inset-0 w-full h-full object-cover"
          autoplay
          loop
          muted
          playsinline
        >
          <source src="/videos/quantum-animation.mp4" type="video/mp4" />
        </video>
      </VideoTransition>

      <div class="relative z-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32">
        <ClipPathReveal>
          <h1 class="text-6xl md:text-7xl font-bold text-white mb-8">
            Pioneering<br />Quantum Innovation
          </h1>
        </ClipPathReveal>
        
        <ScrollReveal>
          <p class="text-xl md:text-2xl text-base-200 max-w-3xl mb-12">
            QDaria is at the forefront of topological quantum computing, harnessing the power of Fibonacci anyons to create inherently stable qubits. Our breakthrough technology achieves unprecedented error resistance through topological protection, making large-scale quantum computing a reality.
          </p>
        </ScrollReveal>

        <ScrollReveal delay={200}>
          <div class="flex gap-6">
            <Hover3DEffect>
              <FlowingBorder>
                <a href="/quantum-computing" class="inline-block px-8 py-4 text-lg font-semibold text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition">
                  Explore Technology
                </a>
              </FlowingBorder>
            </Hover3DEffect>
            <Hover3DEffect>
              <FlowingBorder>
                <a href="/contact" class="inline-block px-8 py-4 text-lg font-semibold text-white border-2 border-white hover:bg-white hover:text-base-950 rounded-lg transition">
                  Get in Touch
                </a>
              </FlowingBorder>
            </Hover3DEffect>
          </div>
        </ScrollReveal>
      </div>
    </section>

    <!-- Key Metrics -->
    <section class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ScrollReveal>
          <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
            Breakthrough Performance
          </h2>
        </ScrollReveal>

        <div class="grid md:grid-cols-3 gap-8">
          {highlights.map((highlight, index) => (
            <ScrollReveal delay={index * 100}>
              <Hover3DEffect>
                <FlowingBorder>
                  <div class="p-8 rounded-xl bg-white dark:bg-base-800 text-center">
                    <h3 class="text-4xl font-bold text-primary-600 dark:text-primary-400 mb-2">
                      {highlight.title}
                    </h3>
                    <p class="text-xl font-semibold text-base-950 dark:text-white mb-4">
                      {highlight.subtitle}
                    </p>
                    <p class="text-base-700 dark:text-base-300">
                      {highlight.description}
                    </p>
                  </div>
                </FlowingBorder>
              </Hover3DEffect>
            </ScrollReveal>
          ))}
        </div>
      </div>
    </section>

    <!-- Innovations -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ScrollReveal>
          <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
            Revolutionary Innovations
          </h2>
        </ScrollReveal>

        <div class="grid md:grid-cols-3 gap-8">
          {innovations.map((innovation, index) => (
            <ScrollReveal delay={index * 100}>
              <Hover3DEffect>
                <FlowingBorder>
                  <div class="p-8 rounded-xl bg-white dark:bg-base-800">
                    <h3 class="text-2xl font-bold text-base-950 dark:text-white mb-4">
                      {innovation.title}
                    </h3>
                    <p class="text-base-700 dark:text-base-300">
                      {innovation.description}
                    </p>
                  </div>
                </FlowingBorder>
              </Hover3DEffect>
            </ScrollReveal>
          ))}
        </div>
      </div>
    </section>

    <!-- Upcoming Milestones -->
    <section class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ScrollReveal>
          <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
            Upcoming Milestones
          </h2>
        </ScrollReveal>

        <div class="grid md:grid-cols-2 gap-12">
          <ScrollReveal>
            <Hover3DEffect>
              <FlowingBorder>
                <div class="p-8 rounded-xl bg-white dark:bg-base-800">
                  <h3 class="text-2xl font-bold text-base-950 dark:text-white mb-4">
                    First in Norway
                  </h3>
                  <p class="text-base-700 dark:text-base-300 mb-6">
                    Launching Norway's first quantum computer in May 2025, featuring the Rigetti Novera QPU. This milestone marks a significant step in establishing Norway as a quantum computing hub.
                  </p>
                  <div class="flex items-center text-primary-600 dark:text-primary-400">
                    <span class="font-semibold">May 2025</span>
                  </div>
                </div>
              </FlowingBorder>
            </Hover3DEffect>
          </ScrollReveal>

          <ScrollReveal delay={200}>
            <Hover3DEffect>
              <FlowingBorder>
                <div class="p-8 rounded-xl bg-white dark:bg-base-800">
                  <h3 class="text-2xl font-bold text-base-950 dark:text-white mb-4">
                    Topological Breakthrough
                  </h3>
                  <p class="text-base-700 dark:text-base-300 mb-6">
                    Unveiling our large-scale topological quantum computer with Fibonacci Anyons in June 2025, representing a quantum leap in stable qubit technology.
                  </p>
                  <div class="flex items-center text-primary-600 dark:text-primary-400">
                    <span class="font-semibold">June 2025</span>
                  </div>
                </div>
              </FlowingBorder>
            </Hover3DEffect>
          </ScrollReveal>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <ScrollReveal>
          <h2 class="text-4xl font-bold text-base-950 dark:text-white mb-8">
            Be Part of the Quantum Revolution
          </h2>
          <p class="text-xl text-base-700 dark:text-base-300 mb-12 max-w-3xl mx-auto">
            Join us in shaping the future of computing. Whether you're interested in our technology, partnership opportunities, or career prospects, we invite you to connect with QDaria.
          </p>
          <div class="flex justify-center gap-6">
            <Hover3DEffect>
              <FlowingBorder>
                <a href="/contact" class="inline-block px-8 py-4 text-lg font-semibold text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition">
                  Contact Us
                </a>
              </FlowingBorder>
            </Hover3DEffect>
            <Hover3DEffect>
              <FlowingBorder>
                <a href="/careers" class="inline-block px-8 py-4 text-lg font-semibold text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 rounded-lg transition">
                  View Opportunities
                </a>
              </FlowingBorder>
            </Hover3DEffect>
          </div>
        </ScrollReveal>
      </div>
    </section>
  </main>
</BaseLayout>
