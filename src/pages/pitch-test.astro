  <div style="background: #16213e; padding: 20px; border-radius: 8px; margin: 20px 0;">
    <h2>Test 3: React Test Component</h2>
    <div id="react-test"></div>
  </div>

  <script type="module">
    // Test if React can be loaded at all
    try {
      const el = document.getElementById('react-test');
      el.innerHTML = '<p style="color: #0f3;">‚öõÔ∏è JavaScript is working!</p>';

      // Try to import React
      import('react').then(() => {
        el.innerHTML += '<p style="color: #0f3;">‚úÖ React library can be loaded</p>';
      }).catch(err => {
        el.innerHTML += `<p style="color: #f03;">‚ùå React import error: ${err.message}</p>`;
      });

      // Try to import PitchDeck
      import('/src/components/pitch-deck/PitchDeck.tsx').then(() => {
        el.innerHTML += '<p style="color: #0f3;">‚úÖ PitchDeck component can be imported</p>';
      }).catch(err => {
        el.innerHTML += `<p style="color: #f03;">‚ùå PitchDeck import error: ${err.message}</p>`;
      });
    } catch (err) {
      console.error('Test error:', err);
    }
  </script>

  <div style="background: #16213e; padding: 20px; border-radius: 8px; margin: 20px 0;">
