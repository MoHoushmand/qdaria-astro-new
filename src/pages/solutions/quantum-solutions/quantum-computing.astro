---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Icon } from "astro-icon";

const features = [
  {
    title: "Topological Qubits",
    description: "Unprecedented stability and coherence times through topological protection",
    icon: "circuit"
  },
  {
    title: "Scalable Architecture",
    description: "Modular design supporting seamless scaling from tens to thousands of qubits",
    icon: "scale"
  },
  {
    title: "Error Correction",
    description: "Advanced error correction protocols for reliable quantum operations",
    icon: "shield"
  }
];
---

<BaseLayout title="Quantum Computing - QDaria" description="Pioneering topological quantum computing">
  <div class="bg-dark min-h-screen">
    <div class="container mx-auto px-4 py-24">
      <h1 class="text-5xl md:text-6xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-[#00ff88] to-[#00ff88]/70 mb-8">
        Quantum Computing
      </h1>
      
      <p class="text-xl text-base-300 mb-12 max-w-3xl">
        Our quantum computing solutions leverage cutting-edge topological architectures to deliver 
        unprecedented computational stability and scalability.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
        {features.map(feature => (
          <div class="bg-dark-800 rounded-xl p-6 border border-[#00ff88]/20">
            <div class="mb-4 inline-block rounded-xl bg-[#00ff88]/10 p-3">
              <Icon name={feature.icon} class="h-6 w-6 text-[#00ff88]" />
            </div>
            <h3 class="text-xl font-bold text-white mb-3">{feature.title}</h3>
            <p class="text-base-300">{feature.description}</p>
          </div>
        ))}
      </div>

      <div class="bg-dark-800 rounded-2xl p-8 border border-[#00ff88]/20">
        <h2 class="text-2xl font-bold text-white mb-4">Why Choose Our Quantum Computing Solution?</h2>
        <ul class="space-y-4 text-base-300">
          <li class="flex items-start gap-3">
            <Icon name="check" class="h-6 w-6 text-[#00ff88] flex-shrink-0" />
            <span>Industry-leading qubit coherence times</span>
          </li>
          <li class="flex items-start gap-3">
            <Icon name="check" class="h-6 w-6 text-[#00ff88] flex-shrink-0" />
            <span>Comprehensive SDK and API access</span>
          </li>
          <li class="flex items-start gap-3">
            <Icon name="check" class="h-6 w-6 text-[#00ff88] flex-shrink-0" />
            <span>Cloud-based quantum development environment</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</BaseLayout>
