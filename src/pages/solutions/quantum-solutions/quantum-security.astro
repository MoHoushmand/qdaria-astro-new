---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Icon } from "astro-icon";

const securityFeatures = [
  {
    title: "Post-Quantum Cryptography",
    description: "NIST-approved quantum-resistant encryption algorithms",
    icon: "lock"
  },
  {
    title: "Quantum Key Distribution",
    description: "Unbreakable key exchange using quantum mechanics",
    icon: "key"
  },
  {
    title: "Quantum Random Numbers",
    description: "True random number generation using quantum processes",
    icon: "random"
  }
];

const standards = [
  {
    name: "CRYSTALS-Kyber",
    type: "Public-Key Encryption",
    status: "NIST Selected"
  },
  {
    name: "CRYSTALS-Dilithium",
    type: "Digital Signatures",
    status: "NIST Selected"
  },
  {
    name: "SPHINCS+",
    type: "Digital Signatures",
    status: "NIST Selected"
  }
];
---

<BaseLayout title="Quantum Security - QDaria" description="Next-generation quantum-resistant security">
  <div class="bg-dark min-h-screen">
    <div class="container mx-auto px-4 py-24">
      <h1 class="text-5xl md:text-6xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-[#ff3366] to-[#ff3366]/70 mb-8">
        Quantum Security
      </h1>
      
      <p class="text-xl text-base-300 mb-12 max-w-3xl">
        Protect your data against future quantum threats with our comprehensive quantum-resistant 
        security solutions.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
        {securityFeatures.map(feature => (
          <div class="bg-dark-800 rounded-xl p-6 border border-[#ff3366]/20">
            <div class="mb-4 inline-block rounded-xl bg-[#ff3366]/10 p-3">
              <Icon name={feature.icon} class="h-6 w-6 text-[#ff3366]" />
            </div>
            <h3 class="text-xl font-bold text-white mb-3">{feature.title}</h3>
            <p class="text-base-300">{feature.description}</p>
          </div>
        ))}
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-16">
        <div class="bg-dark-800 rounded-xl p-8 border border-[#ff3366]/20">
          <h2 class="text-2xl font-bold text-white mb-6">Quantum-Safe Standards</h2>
          <div class="space-y-4">
            {standards.map(standard => (
              <div class="p-4 bg-dark-900 rounded-lg">
                <div class="flex justify-between items-start">
                  <h3 class="text-lg font-bold text-[#ff3366]">{standard.name}</h3>
                  <span class="px-2 py-0.5 rounded bg-[#ff3366]/20 text-[#ff3366] text-sm">
                    {standard.status}
                  </span>
                </div>
                <p class="text-base-300 mt-2">{standard.type}</p>
              </div>
            ))}
          </div>
        </div>

        <div class="bg-dark-800 rounded-xl p-8 border border-[#ff3366]/20">
          <h2 class="text-2xl font-bold text-white mb-6">Why Act Now?</h2>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <Icon name="shield" class="h-6 w-6 text-[#ff3366] flex-shrink-0" />
              <div>
                <h3 class="font-bold text-white">Store Now, Decrypt Later</h3>
                <p class="text-base-300">Protect against quantum attackers storing encrypted data now for future decryption</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <Icon name="clock" class="h-6 w-6 text-[#ff3366] flex-shrink-0" />
              <div>
                <h3 class="font-bold text-white">Integration Timeline</h3>
                <p class="text-base-300">Start the transition to quantum-safe cryptography before it's too late</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <Icon name="certificate" class="h-6 w-6 text-[#ff3366] flex-shrink-0" />
              <div>
                <h3 class="font-bold text-white">Compliance Ready</h3>
                <p class="text-base-300">Stay ahead of upcoming quantum security regulations and standards</p>
              </div>
            </li>
          </ul>
        </div>
      </div>

      <div class="bg-gradient-to-br from-dark-800 to-dark-900 rounded-2xl p-8 border border-[#ff3366]/20">
        <h2 class="text-2xl font-bold text-white mb-4">Ready to Secure Your Future?</h2>
        <p class="text-base-300 mb-6">
          Start your journey to quantum-safe security today. Our team of experts will help you assess 
          your needs and develop a comprehensive quantum security strategy.
        </p>
        <a href="/contact" class="inline-flex items-center gap-2 text-[#ff3366] hover:text-[#ff3366]/80 transition-colors">
          Contact our security experts
          <Icon name="arrow-right" class="h-4 w-4" />
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
