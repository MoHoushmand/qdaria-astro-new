---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import ClipPathReveal from "../../../components/Animation/ClipPathReveal.astro";
import ScrollReveal from "../../../components/Animation/ScrollReveal.astro";
import Hover3DEffect from "../../../components/Animation/Hover3DEffect.astro";
import FlowingBorder from "../../../components/Animation/FlowingBorder.astro";

const features = [
  {
    title: "High-Frequency Data Trading",
    description: "Quantum-enhanced algorithms for ultra-fast market data processing and trade execution.",
    icon: "chart"
  },
  {
    title: "Portfolio Optimization",
    description: "Advanced quantum algorithms for real-time portfolio optimization and risk management.",
    icon: "portfolio"
  },
  {
    title: "Risk Analysis",
    description: "Quantum-powered risk assessment and predictive analytics for market movements.",
    icon: "risk"
  },
  {
    title: "Market Simulation",
    description: "Complex market scenario modeling using quantum computing capabilities.",
    icon: "simulation"
  }
];

const capabilities = [
  {
    title: "Trading Optimization",
    points: [
      "Microsecond trade execution",
      "Multi-market analysis",
      "Pattern recognition",
      "Automated strategy adjustment"
    ]
  },
  {
    title: "Risk Management",
    points: [
      "Real-time risk assessment",
      "Stress testing scenarios",
      "Exposure monitoring",
      "Compliance tracking"
    ]
  },
  {
    title: "Portfolio Analytics",
    points: [
      "Asset allocation optimization",
      "Performance attribution",
      "Factor analysis",
      "Rebalancing strategies"
    ]
  }
];

const specifications = [
  {
    category: "Performance",
    details: [
      "Sub-microsecond latency",
      "Multi-asset class support",
      "Global market coverage",
      "24/7 operation capability"
    ]
  },
  {
    category: "Integration",
    details: [
      "FIX protocol support",
      "API connectivity",
      "Custom data feeds",
      "Third-party compatibility"
    ]
  },
  {
    category: "Security",
    details: [
      "Quantum-safe encryption",
      "Multi-factor authentication",
      "Audit trail logging",
      "Regulatory compliance"
    ]
  }
];

const marketTypes = [
  "Equities",
  "Fixed Income",
  "Derivatives",
  "Cryptocurrencies",
  "Forex",
  "Commodities"
];
---

<BaseLayout title="Qm9 - Quantum-Enhanced Financial Technology">
  <main class="relative">
    <!-- Hero Section -->
    <section class="pt-32 pb-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-base-950 to-base-900">
      <div class="max-w-7xl mx-auto">
        <ClipPathReveal>
          <h1 class="text-5xl md:text-6xl font-bold text-white mb-8">
            Qm9
          </h1>
        </ClipPathReveal>
        
        <ScrollReveal>
          <p class="text-2xl text-base-200 max-w-3xl mb-12">
            Revolutionary quantum-enhanced financial technology platform delivering superior trading performance and risk management capabilities.
          </p>
        </ScrollReveal>

        <ScrollReveal delay={200}>
          <div class="flex gap-6">
            <Hover3DEffect>
              <FlowingBorder>
                <a href="/contact" class="inline-block px-8 py-4 text-lg font-semibold text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition">
                  Request Demo
                </a>
              </FlowingBorder>
            </Hover3DEffect>
            <Hover3DEffect>
              <FlowingBorder>
                <a href="#features" class="inline-block px-8 py-4 text-lg font-semibold text-white border-2 border-white hover:bg-white hover:text-base-950 rounded-lg transition">
                  Explore Features
                </a>
              </FlowingBorder>
            </Hover3DEffect>
          </div>
        </ScrollReveal>
      </div>
    </section>

    <!-- Key Features -->
    <section id="features" class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ScrollReveal>
          <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
            Advanced Trading Features
          </h2>
        </ScrollReveal>

        <div class="grid md:grid-cols-2 gap-8">
          {features.map((feature, index) => (
            <ScrollReveal delay={index * 100}>
              <Hover3DEffect>
                <FlowingBorder>
                  <div class="p-8 rounded-xl bg-white dark:bg-base-800">
                    <h3 class="text-2xl font-bold text-base-950 dark:text-white mb-4">
                      {feature.title}
                    </h3>
                    <p class="text-base-700 dark:text-base-300">
                      {feature.description}
                    </p>
                  </div>
                </FlowingBorder>
              </Hover3DEffect>
            </ScrollReveal>
          ))}
        </div>
      </div>
    </section>

    <!-- Market Coverage -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ScrollReveal>
          <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
            Market Coverage
          </h2>
        </ScrollReveal>

        <div class="grid grid-cols-2 md:grid-cols-3 gap-8">
          {marketTypes.map((market, index) => (
            <ScrollReveal delay={index * 100}>
              <Hover3DEffect>
                <FlowingBorder>
                  <div class="p-6 rounded-xl bg-white dark:bg-base-800 text-center">
                    <h3 class="text-xl font-bold text-base-950 dark:text-white">
                      {market}
                    </h3>
                  </div>
                </FlowingBorder>
              </Hover3DEffect>
            </ScrollReveal>
          ))}
        </div>
      </div>
    </section>

    <!-- Capabilities -->
    <section class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ScrollReveal>
          <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
            Platform Capabilities
          </h2>
        </ScrollReveal>

        <div class="grid md:grid-cols-3 gap-8">
          {capabilities.map((capability, index) => (
            <ScrollReveal delay={index * 100}>
              <Hover3DEffect>
                <FlowingBorder>
                  <div class="p-8 rounded-xl bg-white dark:bg-base-800 h-full">
                    <h3 class="text-2xl font-bold text-base-950 dark:text-white mb-6">
                      {capability.title}
                    </h3>
                    <ul class="space-y-4">
                      {capability.points.map((point) => (
                        <li class="flex items-start">
                          <span class="text-primary-600 dark:text-primary-400 mr-2">•</span>
                          <span class="text-base-700 dark:text-base-300">{point}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </FlowingBorder>
              </Hover3DEffect>
            </ScrollReveal>
          ))}
        </div>
      </div>
    </section>

    <!-- Technical Specifications -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ScrollReveal>
          <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
            Technical Specifications
          </h2>
        </ScrollReveal>

        <div class="grid md:grid-cols-3 gap-8">
          {specifications.map((spec, index) => (
            <ScrollReveal delay={index * 100}>
              <Hover3DEffect>
                <FlowingBorder>
                  <div class="p-8 rounded-xl bg-white dark:bg-base-800 h-full">
                    <h3 class="text-2xl font-bold text-base-950 dark:text-white mb-6">
                      {spec.category}
                    </h3>
                    <ul class="space-y-4">
                      {spec.details.map((detail) => (
                        <li class="flex items-start">
                          <span class="text-primary-600 dark:text-primary-400 mr-2">•</span>
                          <span class="text-base-700 dark:text-base-300">{detail}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </FlowingBorder>
              </Hover3DEffect>
            </ScrollReveal>
          ))}
        </div>
      </div>
    </section>

    <!-- Success Story Preview -->
    <section class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ScrollReveal>
          <div class="max-w-3xl mx-auto text-center">
            <h2 class="text-4xl font-bold text-base-950 dark:text-white mb-8">
              Success Story
            </h2>
            <blockquote class="text-xl text-base-700 dark:text-base-300 mb-12">
              "Qm9 enabled our hedge fund to increase returns by 25% through quantum-enhanced trading strategies and superior risk management."
            </blockquote>
            <p class="text-base-600 dark:text-base-400 italic">
              - Coming February 2025
            </p>
          </div>
        </ScrollReveal>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <ScrollReveal>
          <h2 class="text-4xl font-bold text-base-950 dark:text-white mb-8">
            Transform Your Trading
          </h2>
          <p class="text-xl text-base-700 dark:text-base-300 mb-12 max-w-3xl mx-auto">
            Ready to experience the power of quantum-enhanced trading? Contact us to schedule a demo and discover how Qm9 can revolutionize your financial operations.
          </p>
          <div class="flex justify-center gap-6">
            <Hover3DEffect>
              <FlowingBorder>
                <a href="/contact" class="inline-block px-8 py-4 text-lg font-semibold text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition">
                  Schedule Demo
                </a>
              </FlowingBorder>
            </Hover3DEffect>
            <Hover3DEffect>
              <FlowingBorder>
                <a href="/contact#sales" class="inline-block px-8 py-4 text-lg font-semibold text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 rounded-lg transition">
                  Contact Sales
                </a>
              </FlowingBorder>
            </Hover3DEffect>
          </div>
        </ScrollReveal>
      </div>
    </section>
  </main>
</BaseLayout>
