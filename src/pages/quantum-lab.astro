---
import BaseLayout from "../layouts/BaseLayout.astro";
import ClipPathReveal from "../components/Animation/ClipPathReveal.astro";
import ScrollReveal from "../components/Animation/ScrollReveal.astro";
import Hover3DEffect from "../components/Animation/Hover3DEffect.astro";
import FlowingBorder from "../components/Animation/FlowingBorder.astro";

const equipment = [
  {
    category: "Quantum Optics",
    items: [
      "Quantum Optics Kit",
      "Breadboard and Damping Feet",
      "Quantum Cryptography Kit",
      "Quantum Eraser Demonstration",
      "Time-Resolved Absorption Spectroscopy"
    ]
  },
  {
    category: "Measurement & Analysis",
    items: [
      "Educational Atomic Force Microscope",
      "Optical Microscopy Course Kit",
      "Spectrometer Kits",
      "Michelson Interferometer Kit",
      "Fourier Optics Kit"
    ]
  },
  {
    category: "Advanced Tools",
    items: [
      "Portable Optical Tweezers Kit",
      "Bomb Tester Demonstration",
      "Polarization and 3D Cinema Technology",
      "Custom Quantum Measurement Tools",
      "Data Acquisition Systems"
    ]
  }
];

const researchAreas = [
  {
    title: "Topological Quantum Computing",
    description: "Research into Fibonacci anyons and their applications in fault-tolerant quantum computation.",
    status: "Active Research"
  },
  {
    title: "Quantum Error Correction",
    description: "Development of topological protection mechanisms and error correction protocols.",
    status: "Active Research"
  },
  {
    title: "Quantum Algorithm Development",
    description: "Design and optimization of quantum algorithms for various applications.",
    status: "Ongoing Development"
  },
  {
    title: "Quantum Materials",
    description: "Investigation of novel materials for quantum computing applications.",
    status: "Early Stage"
  }
];

const services = [
  {
    title: "Equipment Rental",
    description: "Access to state-of-the-art quantum mechanics experimental kits for research and education.",
    availability: "Available Now"
  },
  {
    title: "Research Collaboration",
    description: "Partnership opportunities for joint research projects in quantum computing.",
    availability: "Open for Proposals"
  },
  {
    title: "Educational Programs",
    description: "Hands-on training and workshops using our quantum lab facilities.",
    availability: "Scheduled Quarterly"
  },
  {
    title: "Custom Development",
    description: "Tailored quantum computing solutions for specific research needs.",
    availability: "By Request"
  }
];

const facilities = [
  {
    name: "Cryogenics Laboratory",
    features: [
      "Ultra-low temperature environment",
      "Precise temperature control",
      "Multiple cooling stages",
      "Advanced isolation systems"
    ]
  },
  {
    name: "Quantum Measurement Lab",
    features: [
      "High-precision instruments",
      "Real-time data acquisition",
      "Quantum state analysis",
      "Custom measurement setups"
    ]
  },
  {
    name: "Development Workshop",
    features: [
      "Prototype fabrication",
      "Component testing",
      "Quality control",
      "Custom tool development"
    ]
  }
];
---

<BaseLayout title="Quantum Lab - QDaria">
  <main class="relative">
    <!-- Hero Section -->
    <section class="pt-32 pb-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-base-950 to-base-900">
      <div class="max-w-7xl mx-auto">
        <ClipPathReveal>
          <h1 class="text-5xl md:text-6xl font-bold text-white mb-8">
            Quantum Lab
          </h1>
        </ClipPathReveal>
        
        <ScrollReveal>
          <p class="text-2xl text-base-200 max-w-3xl mb-12">
            State-of-the-art research facilities dedicated to advancing quantum computing technology through experimental research and development.
          </p>
        </ScrollReveal>

        <ScrollReveal delay={200}>
          <div class="flex gap-6">
            <Hover3DEffect>
              <FlowingBorder>
                <a href="/contact" class="inline-block px-8 py-4 text-lg font-semibold text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition">
                  Schedule Visit
                </a>
              </FlowingBorder>
            </Hover3DEffect>
            <Hover3DEffect>
              <FlowingBorder>
                <a href="#equipment" class="inline-block px-8 py-4 text-lg font-semibold text-white border-2 border-white hover:bg-white hover:text-base-950 rounded-lg transition">
                  View Equipment
                </a>
              </FlowingBorder>
            </Hover3DEffect>
          </div>
        </ScrollReveal>
      </div>
    </section>

    <!-- Research Areas -->
    <section class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ScrollReveal>
          <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
            Research Areas
          </h2>
        </ScrollReveal>

        <div class="grid md:grid-cols-2 gap-8">
          {researchAreas.map((area, index) => (
            <ScrollReveal delay={index * 100}>
              <Hover3DEffect>
                <FlowingBorder>
                  <div class="p-8 rounded-xl bg-white dark:bg-base-800">
                    <div class="flex justify-between items-start mb-4">
                      <h3 class="text-2xl font-bold text-base-950 dark:text-white">
                        {area.title}
                      </h3>
                      <span class="inline-block px-3 py-1 text-sm font-medium text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/20 rounded-full">
                        {area.status}
                      </span>
                    </div>
                    <p class="text-base-700 dark:text-base-300">
                      {area.description}
                    </p>
                  </div>
                </FlowingBorder>
              </Hover3DEffect>
            </ScrollReveal>
          ))}
        </div>
      </div>
    </section>

    <!-- Equipment -->
    <section id="equipment" class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ScrollReveal>
          <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
            Laboratory Equipment
          </h2>
        </ScrollReveal>

        <div class="grid md:grid-cols-3 gap-8">
          {equipment.map((category, index) => (
            <ScrollReveal delay={index * 100}>
              <Hover3DEffect>
                <FlowingBorder>
                  <div class="p-8 rounded-xl bg-white dark:bg-base-800 h-full">
                    <h3 class="text-2xl font-bold text-base-950 dark:text-white mb-6">
                      {category.category}
                    </h3>
                    <ul class="space-y-4">
                      {category.items.map((item) => (
                        <li class="flex items-start">
                          <span class="text-primary-600 dark:text-primary-400 mr-2">•</span>
                          <span class="text-base-700 dark:text-base-300">{item}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </FlowingBorder>
              </Hover3DEffect>
            </ScrollReveal>
          ))}
        </div>
      </div>
    </section>

    <!-- Facilities -->
    <section class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ScrollReveal>
          <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
            Research Facilities
          </h2>
        </ScrollReveal>

        <div class="grid md:grid-cols-3 gap-8">
          {facilities.map((facility, index) => (
            <ScrollReveal delay={index * 100}>
              <Hover3DEffect>
                <FlowingBorder>
                  <div class="p-8 rounded-xl bg-white dark:bg-base-800 h-full">
                    <h3 class="text-2xl font-bold text-base-950 dark:text-white mb-6">
                      {facility.name}
                    </h3>
                    <ul class="space-y-4">
                      {facility.features.map((feature) => (
                        <li class="flex items-start">
                          <span class="text-primary-600 dark:text-primary-400 mr-2">•</span>
                          <span class="text-base-700 dark:text-base-300">{feature}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </FlowingBorder>
              </Hover3DEffect>
            </ScrollReveal>
          ))}
        </div>
      </div>
    </section>

    <!-- Services -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ScrollReveal>
          <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
            Lab Services
          </h2>
        </ScrollReveal>

        <div class="grid md:grid-cols-2 gap-8">
          {services.map((service, index) => (
            <ScrollReveal delay={index * 100}>
              <Hover3DEffect>
                <FlowingBorder>
                  <div class="p-8 rounded-xl bg-white dark:bg-base-800">
                    <div class="flex justify-between items-start mb-4">
                      <h3 class="text-2xl font-bold text-base-950 dark:text-white">
                        {service.title}
                      </h3>
                      <span class="inline-block px-3 py-1 text-sm font-medium text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/20 rounded-full">
                        {service.availability}
                      </span>
                    </div>
                    <p class="text-base-700 dark:text-base-300">
                      {service.description}
                    </p>
                  </div>
                </FlowingBorder>
              </Hover3DEffect>
            </ScrollReveal>
          ))}
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <ScrollReveal>
          <h2 class="text-4xl font-bold text-base-950 dark:text-white mb-8">
            Access Our Facilities
          </h2>
          <p class="text-xl text-base-700 dark:text-base-300 mb-12 max-w-3xl mx-auto">
            Whether you're a researcher, educational institution, or industry partner, we invite you to explore our quantum lab facilities and equipment.
          </p>
          <div class="flex justify-center gap-6">
            <Hover3DEffect>
              <FlowingBorder>
                <a href="/contact" class="inline-block px-8 py-4 text-lg font-semibold text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition">
                  Schedule Visit
                </a>
              </FlowingBorder>
            </Hover3DEffect>
            <Hover3DEffect>
              <FlowingBorder>
                <a href="/contact#collaboration" class="inline-block px-8 py-4 text-lg font-semibold text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 rounded-lg transition">
                  Discuss Collaboration
                </a>
              </FlowingBorder>
            </Hover3DEffect>
          </div>
        </ScrollReveal>
      </div>
    </section>
  </main>
</BaseLayout>
