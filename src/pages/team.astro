---

<BaseLayout title={pageTitle} description={description}>
  <main class="flex-1">
    <!-- Hero Section -->
    <section class="py-16 md:py-20">
      <div class="site-container">
        <div class="mx-auto max-w-4xl text-center">
          <Badge>Our Team</Badge>
          <h1 class="h1 mb-8">Meet Our Quantum Innovators</h1>
          <p class="description mx-auto mb-8 max-w-2xl text-lg md:text-xl">
            Our team combines deep expertise in quantum physics, engineering, and business to drive the advancement of quantum computing technology.
          </p>
        </div>
      </div>
    </section>

    <!-- Team Grid -->
    <section class="py-16 md:py-20">
      <div class="site-container">
        <div class="mx-auto grid max-w-6xl gap-8 sm:grid-cols-2">
          {teamMembers.map((member) => (
            <div class="rounded-xl border border-blue-500/30 bg-gray-950/80 p-8 shadow-[0_0_15px_rgba(0,0,255,0.2)] transition-all hover:shadow-[0_0_25px_rgba(0,0,255,0.4)]">
              <div class="flex flex-col md:flex-row md:gap-8">
                <div class="mb-6 md:mb-0 md:w-1/3">
                  <Image
                    src={member.image}
                    alt={member.name}
                    class="rounded-lg"
                    width={200}
                    height={200}
                  />
                </div>
                <div class="md:w-2/3">
                  <h2 class="h3 mb-1">{member.name}</h2>
                  <p class="mb-4 text-blue-400">{member.title}</p>
                  <p class="description mb-6">
                    {member.bio}
                  </p>
                  
                  <div class="mb-6">
                    <h3 class="text-sm font-medium text-blue-400">Areas of Expertise</h3>
                    <ul class="mt-2 space-y-2">
                      {member.expertise.map((item) => (
                        <li class="flex items-start gap-2">
                          <span class="mt-1 text-blue-400">•</span>
                          <span>{item}</span>
                        </li>
                      ))}
                    </ul>
                  </div>

                  <div>
                    <h3 class="text-sm font-medium text-blue-400">Key Achievements</h3>
                    <ul class="mt-2 space-y-2">
                      {member.achievements.map((item) => (
                        <li class="flex items-start gap-2">
                          <span class="mt-1 text-blue-400">•</span>
                          <span>{item}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-16 md:py-20">
      <div class="site-container">
        <div class="mx-auto max-w-4xl rounded-xl border border-blue-500/30 bg-gray-950/80 p-8 text-center shadow-[0_0_15px_rgba(0,0,255,0.2)] transition-all hover:shadow-[0_0_25px_rgba(0,0,255,0.4)]">
          <h2 class="h2 mb-4">Join Our Team</h2>
          <p class="description mx-auto mb-8 max-w-2xl text-lg">
            We're always looking for talented individuals passionate about quantum computing and innovation.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <Button
              variant="primary"
              href="/careers"
              class="rounded-lg border border-blue-500/30 bg-gray-950 px-6 py-3 text-gray-300 shadow-[0_0_15px_rgba(0,0,255,0.2)] transition-all hover:shadow-[0_0_25px_rgba(0,0,255,0.4)]"
            >
              View Opportunities
            </Button>
            <Button
              variant="ghost"
              href="/contact"
              class="rounded-lg border border-blue-500/30 bg-gray-950 px-6 py-3 text-gray-300 shadow-[0_0_15px_rgba(0,0,255,0.2)] transition-all hover:shadow-[0_0_25px_rgba(0,0,255,0.4)]"
            >
              Contact Us
            </Button>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
