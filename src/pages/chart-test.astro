      </div>
    </section>
    
    <!-- Revenue Chart Section -->
    <section id="revenue" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">Revenue Projections</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <RevenueChartApex 
          id="revenue-test" 
          height="500px"
        />
      </div>
    </section>
    
    <!-- Profitability Chart Section -->
    <section id="profitability" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">Profitability Analysis</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <ProfitabilityChartApex 
          id="profitability-test" 
          height="500px"
        />
      </div>
    </section>
    
    <!-- Risk Assessment Chart Section -->
    <section id="risk-assessment" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">Risk Assessment</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <RiskAssessmentChartApex 
          id="risk-assessment-test" 
          height="500px"
        />
      </div>
    </section>
    
    <!-- Funding Allocation Chart Section -->
    <section id="funding-allocation" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">Funding Allocation</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <FundingAllocationChartApex 
          id="funding-allocation-test" 
          height="500px"
        />
      </div>
    </section>
    
    <!-- Investment Distribution Chart Section -->
    <section id="investment-distribution" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">Investment Distribution</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <InvestmentDistributionChartApex 
          id="investment-distribution-test" 
          height="500px"
        />
      </div>
    </section>
    
    <!-- ROI Comparison Chart Section -->
    <section id="roi-comparison" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">ROI Comparison</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <ROIComparisonChartApex 
          id="roi-comparison-test" 
          height="500px"
        />
      </div>
    </section>
    
    <!-- Market Positioning Chart Section -->
    <section id="market-positioning" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">Market Positioning</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <MarketPositioningChartApex 
          id="market-positioning-test" 
          height="500px"
        />
      </div>
    </section>
    
    <!-- Revenue Diversification Chart Section -->
    <section id="revenue-diversification" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">Revenue Diversification</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <RevenueDiversificationChartApex 
          id="revenue-diversification-test" 
          height="500px"
        />
      </div>
    </section>
    
    <!-- Stock Performance Chart Section -->
    <section id="stock-performance" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">Stock Performance</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <StockPerformanceChartApex 
          id="stock-performance-test" 
          height="500px"
        />
      </div>
    </section>
    
    <!-- Financial Metrics Mixed Chart Section -->
    <section id="financial-metrics" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">Financial Metrics Dashboard</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <FinancialMetricsMixedChartApex 
          id="financial-metrics-test" 
          height="500px"
        />
      </div>
    </section>
    
    <!-- Organizational Chart Section -->
    <section id="organizational-chart" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">Organizational Structure</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <OrganizationalChartApex 
          id="organizational-chart-test" 
          height="500px"
        />
      </div>
    </section>
    
    <!-- Topological Timeline Chart Section -->
    <section id="topological-timeline" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">Topological Quantum Computing Timeline</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <TopologicalTimelineChartApex 
          id="topological-timeline-test" 
          height="500px"
        />
      </div>
    </section>
    
    <!-- Testing Tools -->
    <section id="testing-tools" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">Testing & Accessibility Tools</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="p-4 border border-primary-blue/30 rounded-lg">
            <h3 class="text-xl font-bold mb-3 text-primary-cyan">Keyboard Navigation</h3>
            <p class="mb-3">Test keyboard accessibility by tabbing through elements:</p>
            <ul class="list-disc pl-6 space-y-1">
              <li>Tab to focus on charts</li>
              <li>Use arrow keys to navigate data points</li>
              <li>Tab to data table toggles and scenario tabs</li>
              <li>Space/Enter to activate buttons</li>
            </ul>
          </div>
          
          <div class="p-4 border border-primary-blue/30 rounded-lg">
            <h3 class="text-xl font-bold mb-3 text-primary-cyan">Visual Testing</h3>
            <p class="mb-3">Verify visual elements:</p>
            <ul class="list-disc pl-6 space-y-1">
              <li>Chart tooltips appear on hover</li>
              <li>Data points are clearly visible</li>
              <li>Annotations for $1T milestone are present</li>
              <li>Colors maintain proper contrast</li>
              <li>Font sizes are readable</li>
            </ul>
          </div>
          
          <div class="p-4 border border-primary-blue/30 rounded-lg">
            <h3 class="text-xl font-bold mb-3 text-primary-cyan">Screen Reader Testing</h3>
            <p class="mb-3">Enable your screen reader and verify:</p>
            <ul class="list-disc pl-6 space-y-1">
              <li>Chart titles are announced</li>
              <li>Data tables can be navigated</li>
              <li>Interactive elements are properly labeled</li>
              <li>Aria-live regions announce chart updates</li>
            </ul>
          </div>
          
          <div class="p-4 border border-primary-blue/30 rounded-lg">
            <h3 class="text-xl font-bold mb-3 text-primary-cyan">Data Verification</h3>
            <p class="mb-3">Check data accuracy:</p>
            <ul class="list-disc pl-6 space-y-1">
              <li>Toggle data tables to verify values</li>
              <li>Confirm competitor data is complete</li>
              <li>Verify $1T milestone is properly marked</li>
              <li>Check that forecasts match business plan text</li>
            </ul>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .primary-blue {
    color: #04a3ff;
  }
  
  .primary-purple {
    color: #7b61ff;
  }
  
  .primary-cyan {
    color: #00ffd3;
  }
  
  .dark-bg-lighter {
    background: #0f172a;
  }
  
  .container {
    max-width: 1400px;
  }
</style>
