---
import BaseLayout from '../layouts/BaseLayout.astro';
import MarketGrowthChartApex from '../components/qdaria-business-plan/charts/MarketGrowthChartApex.astro';
import CompetitorRadarChartApex from '../components/qdaria-business-plan/charts/CompetitorRadarChartApex.astro';
import QuantumHardwareComparisonChartApex from '../components/qdaria-business-plan/charts/QuantumHardwareComparisonChartApex.astro';
import ForecastScenariosRangeChartApex from '../components/qdaria-business-plan/charts/ForecastScenariosRangeChartApex.astro';
import SWOTAnalysisChartApex from '../components/qdaria-business-plan/charts/SWOTAnalysisChartApex.astro';
import RiskAssessmentChartApex from '../components/qdaria-business-plan/charts/RiskAssessmentChartApex.astro';
import ExecutionRoadmapChartApex from '../components/qdaria-business-plan/charts/ExecutionRoadmapChartApex.astro';
import RevenueChartApex from '../components/qdaria-business-plan/charts/RevenueChartApex.astro';
import ProfitabilityChartApex from '../components/qdaria-business-plan/charts/ProfitabilityChartApex.astro';
import CompetitorStrengthChartApex from '../components/qdaria-business-plan/charts/CompetitorStrengthChartApex.astro';
import StockPerformanceChartApex from '../components/qdaria-business-plan/charts/StockPerformanceChartApex.astro';
import FundingAllocationChartApex from '../components/qdaria-business-plan/charts/FundingAllocationChartApex.astro';
import InvestmentDistributionChartApex from '../components/qdaria-business-plan/charts/InvestmentDistributionChartApex.astro';
import ROIComparisonChartApex from '../components/qdaria-business-plan/charts/ROIComparisonChartApex.astro';
import MarketPositioningChartApex from '../components/qdaria-business-plan/charts/MarketPositioningChartApex.astro';
import RevenueDiversificationChartApex from '../components/qdaria-business-plan/charts/RevenueDiversificationChartApex.astro';
import FinancialMetricsMixedChartApex from '../components/qdaria-business-plan/charts/FinancialMetricsMixedChartApex.astro';
import OrganizationalChartApex from '../components/qdaria-business-plan/charts/OrganizationalChartApex.astro';
import TopologicalTimelineChartApex from '../components/qdaria-business-plan/charts/TopologicalTimelineChartApex.astro';

// Page metadata
const title = "QDaria Business Plan Chart Test Page";
const description = "Testing page for all ApexCharts implementations in the QDaria Business Plan";
---

<BaseLayout title={title} description={description}>
  <main class="container mx-auto px-4 py-8 bg-dark-navy text-white">
    <h1 class="text-4xl font-bold mb-8 text-primary-blue text-center">QDaria Business Plan Chart Test Page</h1>
    
    <p class="mb-8 max-w-4xl mx-auto">
      This page displays all ApexCharts implementations used in the QDaria Business Plan. 
      Use this page to verify chart functionality, accessibility, and appearance.
      Each chart includes its data table, annotations, and interactive elements.
    </p>
    
    <div class="mb-12 p-4 bg-gradient-to-r from-blue-900/20 to-purple-900/20 border border-primary-blue/30 rounded-lg">
      <h2 class="text-2xl font-bold mb-4 text-primary-cyan">Chart Implementation Summary</h2>
      <ul class="list-disc pl-6 space-y-2">
        <li>Total ApexCharts implemented: 17</li>
        <li>Chart types utilized: 15 distinct visualization types</li>
        <li>Key features: data tables, keyboard navigation, ARIA attributes, scenario selection</li>
        <li>All charts include the $1 Trillion milestone annotation where applicable</li>
        <li>All competitor charts now include Microsoft, Quantinuum, and other major players</li>
        <li>Default view for Market Growth chart is now "Compare All"</li>
      </ul>
    </div>
    
    <!-- Market Growth Chart Section -->
    <section id="market-growth" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">Market Growth Projection</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <MarketGrowthChartApex 
          id="market-growth-test" 
          height="500px"
        />
      </div>
    </section>
    
    <!-- Forecast Scenarios Range Chart Section -->
    <section id="forecast-scenarios" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">Market Forecast Scenarios</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <ForecastScenariosRangeChartApex 
          id="forecast-scenarios-test" 
          height="500px"
        />
      </div>
    </section>

    <!-- Quantum Hardware Comparison Chart Section -->
    <section id="hardware-comparison" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">Quantum Hardware Comparison</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <QuantumHardwareComparisonChartApex 
          id="hardware-comparison-test" 
          height="500px"
        />
      </div>
    </section>
    
    <!-- Competitor Strength Chart Section -->
    <section id="competitor-strength" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">Competitor Strength Analysis</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <CompetitorStrengthChartApex 
          id="competitor-strength-test" 
          height="500px"
        />
      </div>
    </section>
    
    <!-- Competitor Radar Chart Section -->
    <section id="competitor-radar" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">Competitor Radar Analysis</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <CompetitorRadarChartApex 
          id="competitor-radar-test" 
          height="500px"
        />
      </div>
    </section>
    
    <!-- SWOT Analysis Chart Section -->
    <section id="swot-analysis" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">SWOT Analysis</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <SWOTAnalysisChartApex 
          id="swot-analysis-test" 
          height="500px"
        />
      </div>
    </section>
    
    <!-- Execution Roadmap Chart Section -->
    <section id="execution-roadmap" class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-primary-purple">Execution Roadmap</h2>
      <div class="bg-dark-bg-lighter p-6 rounded-lg shadow-lg">
        <ExecutionRoadmapChartApex 
          id="execution-roadmap-test" 
          height="500px"
