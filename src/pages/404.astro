---
import BaseLayout from "@layouts/BaseLayout.astro";

const pageTitle = "Page Not Found | QDaria Quantum Technologies";
const description = "The page you're looking for doesn't exist or has been moved.";
---

<BaseLayout title={pageTitle} description={description}>
  <main class="flex-1">
    <section class="py-16 md:py-20">
      <div class="site-container">
        <div class="mx-auto max-w-4xl text-center">
          <h1 class="h1 mb-8 text-gradient-blue">
            404 - Page Not Found
          </h1>
          <p class="description mx-auto mb-8 max-w-2xl text-lg md:text-xl">
            The page you're looking for doesn't exist or has been moved.
          </p>
          <a href="/" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
            Return to Home
          </a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
