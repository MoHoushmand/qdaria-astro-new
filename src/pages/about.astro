---
import BaseLayout from "@layouts/BaseLayout.astro";
import Nav from "@components/Nav/Nav.astro";
import { Image } from "astro:assets";

const milestones = [
  {
    date: "May 2025",
    title: "Rigetti Novera QPU Launch",
    description: "First quantum computer in Norway, in partnership with Rigetti Computing"
  },
  {
    date: "June 2025",
    title: "Topological Quantum Computer",
    description: "Revolutionary large-scale quantum computer using Fibonacci Anyons"
  },
  {
    date: "January 2025",
    title: "Zipminator Launch",
    description: "Advanced quantum-safe cybersecurity solution"
  },
  {
    date: "February 2025",
    title: "QDiana Platform",
    description: "Comprehensive quantum education platform"
  },
  {
    date: "May 2026",
    title: "IQT Nordics Oslo",
    description: "Hosting premier quantum technology conference"
  }
];

const partnerships = [
  {
    name: "Rigetti Computing",
    role: "Hardware Development",
    description: "Strategic partnership for quantum computer implementation in Norway",
    logo: "/icons/logos/rigetti0.svg"
  },
  {
    name: "Bluefors",
    role: "Cryogenic Systems",
    description: "Collaboration on advanced quantum computing infrastructure",
    logo: "/icons/logos/bluefors.svg"
  }
];

const researchAreas = [
  {
    title: "Topological Quantum Computing",
    description: "Pioneering the development of fault-tolerant quantum computers using Fibonacci anyons, achieving unprecedented stability through topological protection.",
    icon: "quantum"
  },
  {
    title: "Quantum Hardware R&D",
    description: "State-of-the-art research facilities with advanced cryogenic systems and precision control electronics for quantum operations.",
    icon: "microscope"
  },
  {
    title: "Quantum Education",
    description: "Developing comprehensive quantum education platforms and renting experimental quantum mechanics kits to research institutions.",
    icon: "school"
  },
  {
    title: "Quantum-Enhanced AI",
    description: "Creating high-end AI and quantum-enhanced swarm intelligence solutions for complex optimization problems.",
    icon: "cpu-2"
  }
];

const recognitions = [
  {
    title: "Top 5 European Startups",
    description: "Recognized among Europe's most promising quantum computing companies"
  },
  {
    title: "Global Top 25",
    description: "Listed among the world's leading quantum technology innovators"
  },
  {
    title: "IQT New York Speaker",
    description: "CEO presenting breakthrough research at quantum technology conference"
  },
  {
    title: "Davos Innovation Week",
    description: "Invited speaker at World Economic Forum's innovation summit"
  }
];
---

<BaseLayout title="About QDaria - Pioneering Quantum Computing Innovation" description="QDaria is revolutionizing quantum computing through topological protection and world-class expertise in quantum technologies.">
  <Nav />
  <main class="relative bg-dark-bg">
    <!-- Hero Section -->
    <section class="relative overflow-hidden pt-32 pb-16">
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-gradient-radial-dark"></div>
      </div>
      <div class="relative mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:max-w-4xl text-center">
          <h1 class="text-gradient-blue mb-8 text-4xl font-bold tracking-tight sm:text-6xl">
            About QDaria
          </h1>
          <p class="text-lg leading-8 text-base-400 mb-8">
            QDaria is revolutionizing quantum computing through our groundbreaking work in topological quantum computers. Based in Norway, we're building the future of computing with unprecedented stability and scalability using Fibonacci anyons.
          </p>
          <div class="mt-10 flex items-center justify-center gap-x-6">
            <a href="/quantum-computing" class="rounded-lg bg-primary-600 px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-primary-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600">
              Our Technology
            </a>
            <a href="/careers" class="text-base font-semibold leading-6 text-base-400 hover:text-primary-400">
              Join Our Team <span aria-hidden="true">â†’</span>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Mission & Vision -->
    <section class="relative py-24">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-4xl text-center">
          <h2 class="text-gradient-blue text-3xl font-bold tracking-tight sm:text-4xl mb-16">Our Purpose</h2>
          <div class="grid gap-16">
            <div class="purpose-card">
              <h3 class="text-2xl font-semibold text-base-200 mb-4">Mission</h3>
              <p class="text-base-400">
                To revolutionize computing by developing scalable topological quantum computers that solve humanity's most complex challenges in cryptography, materials science, and artificial intelligence.
              </p>
            </div>
            <div class="purpose-card">
              <h3 class="text-2xl font-semibold text-base-200 mb-4">Vision</h3>
              <p class="text-base-400">
                To establish Norway as a global quantum computing hub and make quantum computing accessible, secure, and practical for businesses and researchers worldwide.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Research Areas -->
    <section class="relative py-24 bg-dark-bg-alt">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center">
          <h2 class="text-gradient-blue text-3xl font-bold tracking-tight sm:text-4xl mb-4">
            Research & Development
          </h2>
          <p class="text-base-400 text-lg mb-16">
            Pushing the boundaries of quantum computing through innovative research and development.
          </p>
        </div>
        <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
          {researchAreas.map(area => (
            <div class="research-card">
              <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary-500/10 mb-6">
                <img 
                  src={`/icons/qdaria/${area.icon}.svg`}
                  alt={area.title}
                  class="h-8 w-8 invert opacity-75"
                />
              </div>
              <h3 class="text-xl font-semibold text-base-200 mb-4">{area.title}</h3>
              <p class="text-base-400">{area.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Timeline -->
    <section class="relative py-24">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center mb-16">
          <h2 class="text-gradient-blue text-3xl font-bold tracking-tight sm:text-4xl mb-4">
            Milestones
          </h2>
          <p class="text-base-400 text-lg">
            Our journey in quantum innovation
          </p>
        </div>
        <div class="relative">
          <div class="absolute left-1/2 h-full w-px -translate-x-1/2 bg-base-800"></div>
          <div class="space-y-12">
            {milestones.map((milestone, index) => (
              <div class="relative flex items-center justify-center">
                <div class={`flex w-full ${index % 2 === 0 ? 'flex-row-reverse' : ''} items-center gap-8`}>
                  <div class="flex-1 text-right">
                    <div class={`timeline-card ${index % 2 === 0 ? 'ml-auto' : 'mr-auto'}`}>
                      <time class="text-primary-400 font-semibold mb-2 block">{milestone.date}</time>
                      <h3 class="text-xl font-semibold text-base-200 mb-2">{milestone.title}</h3>
                      <p class="text-base-400">{milestone.description}</p>
                    </div>
                  </div>
                  <div class="absolute left-1/2 -translate-x-1/2 flex h-8 w-8 items-center justify-center rounded-full border-2 border-primary-500 bg-dark-bg">
                    <div class="h-3 w-3 rounded-full bg-primary-500"></div>
                  </div>
                  <div class="flex-1"></div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Strategic Partnerships -->
    <section class="relative py-24 bg-dark-bg-alt">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center mb-16">
          <h2 class="text-gradient-blue text-3xl font-bold tracking-tight sm:text-4xl mb-4">
            Strategic Partnerships
          </h2>
          <p class="text-base-400 text-lg">
            Collaborating with industry leaders to advance quantum computing
          </p>
        </div>
        <div class="grid grid-cols-1 gap-8 sm:grid-cols-2">
          {partnerships.map(partner => (
            <div class="partner-card">
              <div class="flex items-center gap-6">
                <img 
                  src={partner.logo}
                  alt={partner.name}
                  class="h-12 w-auto"
                  style="opacity: 0.75;"
                />
                <div>
                  <h3 class="text-xl font-semibold text-base-200">{partner.name}</h3>
                  <p class="text-primary-400 font-medium">{partner.role}</p>
                </div>
              </div>
              <p class="mt-4 text-base-400">{partner.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Recognition -->
    <section class="relative py-24">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center mb-16">
          <h2 class="text-gradient-blue text-3xl font-bold tracking-tight sm:text-4xl mb-4">
            Recognition
          </h2>
          <p class="text-base-400 text-lg">
            Acknowledged for our contributions to quantum computing
          </p>
        </div>
        <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
          {recognitions.map(item => (
            <div class="recognition-card">
              <h3 class="text-xl font-semibold text-base-200 mb-4">{item.title}</h3>
              <p class="text-base-400">{item.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .text-gradient-blue {
    @apply bg-gradient-to-r from-blue-400 to-primary-400 bg-clip-text text-transparent;
  }

  .bg-gradient-radial-dark {
    background: radial-gradient(circle at center, rgba(29, 78, 216, 0.15), transparent 80%);
  }

  .purpose-card {
    @apply relative rounded-2xl border border-base-800 bg-dark-bg-alt p-8 transition-all duration-300;
    box-shadow: 0 0 20px rgba(29, 78, 216, 0.1);
  }

  .purpose-card:hover {
    box-shadow: 0 0 30px rgba(29, 78, 216, 0.2);
    border-color: rgba(29, 78, 216, 0.5);
  }

  .research-card {
    @apply relative rounded-2xl border border-base-800 bg-dark-bg p-6 transition-all duration-300;
    box-shadow: 0 0 20px rgba(29, 78, 216, 0.1);
  }

  .research-card:hover {
    box-shadow: 0 0 30px rgba(29, 78, 216, 0.2);
    border-color: rgba(29, 78, 216, 0.5);
  }

  .timeline-card {
    @apply relative rounded-2xl border border-base-800 bg-dark-bg p-6 transition-all duration-300 max-w-lg;
    box-shadow: 0 0 20px rgba(29, 78, 216, 0.1);
  }

  .timeline-card:hover {
    box-shadow: 0 0 30px rgba(29, 78, 216, 0.2);
    border-color: rgba(29, 78, 216, 0.5);
  }

  .partner-card {
    @apply relative rounded-2xl border border-base-800 bg-dark-bg p-6 transition-all duration-300;
    box-shadow: 0 0 20px rgba(29, 78, 216, 0.1);
  }

  .partner-card:hover {
    box-shadow: 0 0 30px rgba(29, 78, 216, 0.2);
    border-color: rgba(29, 78, 216, 0.5);
  }

  .recognition-card {
    @apply relative rounded-2xl border border-base-800 bg-dark-bg p-6 transition-all duration-300;
    box-shadow: 0 0 20px rgba(29, 78, 216, 0.1);
  }

  .recognition-card:hover {
    box-shadow: 0 0 30px rgba(29, 78, 216, 0.2);
    border-color: rgba(29, 78, 216, 0.5);
  }

  .bg-dark-bg-alt {
    @apply bg-base-900/50;
  }
</style>
