---
import BaseLayout from "../../../layouts/BaseLayout.astro";

const features = [
  {
    title: "Quantum Key Distribution",
    description: "Secure communication channels using cutting-edge QKD technology for unbreakable encryption.",
    icon: "key"
  },
  {
    title: "NIST PQE Standards",
    description: "Implements the latest NIST Post-Quantum Encryption standards for future-proof security.",
    icon: "shield"
  },
  {
    title: "Real-time Threat Detection",
    description: "Advanced quantum-enhanced monitoring and threat detection capabilities.",
    icon: "alert"
  },
  {
    title: "Quantum-Safe Architecture",
    description: "Built from the ground up to resist both classical and quantum-based attacks.",
    icon: "lock"
  }
];

const benefits = [
  {
    title: "Financial Institutions",
    points: [
      "Protect sensitive financial transactions",
      "Secure client data against quantum threats",
      "Maintain regulatory compliance",
      "Real-time fraud detection"
    ]
  },
  {
    title: "Government Agencies",
    points: [
      "Safeguard classified information",
      "Secure communication channels",
      "Protect critical infrastructure",
      "Long-term data security"
    ]
  },
  {
    title: "Enterprise Solutions",
    points: [
      "Protect intellectual property",
      "Secure supply chain communications",
      "Employee data protection",
      "Cloud security integration"
    ]
  }
];

const specifications = [
  {
    category: "Encryption",
    details: [
      "NIST PQE Standard Compliance",
      "256-bit Quantum Key Distribution",
      "Hybrid Classical-Quantum Encryption",
      "Real-time Key Rotation"
    ]
  },
  {
    category: "Performance",
    details: [
      "Sub-millisecond Encryption Speed",
      "99.999% Uptime Guarantee",
      "Unlimited Concurrent Connections",
      "Global Node Distribution"
    ]
  },
  {
    category: "Integration",
    details: [
      "RESTful API Access",
      "SDK Support for Major Languages",
      "Cloud Platform Integration",
      "Hardware Security Module Compatible"
    ]
  }
];
---

<BaseLayout 
  title="Zipminator - Quantum-Safe Cybersecurity Solution"
  description="The next generation of cybersecurity, combining Quantum Key Distribution with NIST Post-Quantum Encryption standards for unbreakable protection."
>
  <main class="relative">
    <!-- Hero Section -->
    <section class="pt-32 pb-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-base-950 to-base-900">
      <div class="max-w-7xl mx-auto">
        <h1 class="text-5xl md:text-6xl font-bold text-white mb-8">
          Zipminator
        </h1>
        
        <p class="text-2xl text-base-200 max-w-3xl mb-12">
          The next generation of cybersecurity, combining Quantum Key Distribution with NIST Post-Quantum Encryption standards for unbreakable protection.
        </p>

        <div class="flex gap-6">
          <a href="/contact" class="inline-block px-8 py-4 text-lg font-semibold text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition">
            Request Demo
          </a>
          <a href="#features" class="inline-block px-8 py-4 text-lg font-semibold text-white border-2 border-white hover:bg-white hover:text-base-950 rounded-lg transition">
            Learn More
          </a>
        </div>
      </div>
    </section>

    <!-- Key Features -->
    <section id="features" class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
          Advanced Security Features
        </h2>

        <div class="grid md:grid-cols-2 gap-8">
          {features.map((feature) => (
            <div class="p-8 rounded-xl bg-white dark:bg-base-800">
              <h3 class="text-2xl font-bold text-base-950 dark:text-white mb-4">
                {feature.title}
              </h3>
              <p class="text-base-700 dark:text-base-300">
                {feature.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Industry Benefits -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
          Industry Solutions
        </h2>

        <div class="grid md:grid-cols-3 gap-8">
          {benefits.map((benefit) => (
            <div class="p-8 rounded-xl bg-white dark:bg-base-800 h-full">
              <h3 class="text-2xl font-bold text-base-950 dark:text-white mb-6">
                {benefit.title}
              </h3>
              <ul class="space-y-4">
                {benefit.points.map((point) => (
                  <li class="flex items-start">
                    <span class="text-primary-600 dark:text-primary-400 mr-2">•</span>
                    <span class="text-base-700 dark:text-base-300">{point}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Technical Specifications -->
    <section class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
          Technical Specifications
        </h2>

        <div class="grid md:grid-cols-3 gap-8">
          {specifications.map((spec) => (
            <div class="p-8 rounded-xl bg-white dark:bg-base-800 h-full">
              <h3 class="text-2xl font-bold text-base-950 dark:text-white mb-6">
                {spec.category}
              </h3>
              <ul class="space-y-4">
                {spec.details.map((detail) => (
                  <li class="flex items-start">
                    <span class="text-primary-600 dark:text-primary-400 mr-2">•</span>
                    <span class="text-base-700 dark:text-base-300">{detail}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Success Story Preview -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-4xl font-bold text-base-950 dark:text-white mb-8">
            Success Story
          </h2>
          <blockquote class="text-xl text-base-700 dark:text-base-300 mb-12">
            "Zipminator enabled secure communications for our multinational banking operations, providing unmatched protection against both current and future cyber threats."
          </blockquote>
          <p class="text-base-600 dark:text-base-400 italic">
            - Coming January 2025
          </p>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl font-bold text-base-950 dark:text-white mb-8">
          Secure Your Future Today
        </h2>
        <p class="text-xl text-base-700 dark:text-base-300 mb-12 max-w-3xl mx-auto">
          Ready to protect your organization with quantum-safe security? Contact us to schedule a demo and learn how Zipminator can safeguard your critical data.
        </p>
        <div class="flex justify-center gap-6">
          <a href="/contact" class="inline-block px-8 py-4 text-lg font-semibold text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition">
            Schedule Demo
          </a>
          <a href="/contact#sales" class="inline-block px-8 py-4 text-lg font-semibold text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 rounded-lg transition">
            Contact Sales
          </a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
