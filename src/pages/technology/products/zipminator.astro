<script>
  // Character counter for use case textarea
  const textarea = document.getElementById('useCase') as HTMLTextAreaElement;
  const charCount = document.getElementById('charCount');

  if (textarea && charCount) {
    textarea.addEventListener('input', () => {
      charCount.textContent = textarea.value.length.toString();
    });
  }

  // Form submission handler
  const form = document.getElementById('waitlist-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const formMessages = document.getElementById('form-messages');

  if (form && submitBtn && formMessages) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Clear previous messages
      formMessages.className = 'hidden';
      formMessages.textContent = '';

      // Validate email
      const emailInput = document.getElementById('email') as HTMLInputElement;
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(emailInput.value)) {
        showMessage('Please enter a valid email address.', 'error');
        return;
      }

      // Validate required fields
      const requiredFields = form.querySelectorAll('[required]');
      let isValid = true;
      requiredFields.forEach((field) => {
        if (!(field as HTMLInputElement).value) {
          isValid = false;
        }
      });

      if (!isValid) {
        showMessage('Please fill in all required fields.', 'error');
        return;
      }

      // Disable submit button
      submitBtn.disabled = true;
      submitBtn.textContent = 'Submitting...';

      // Collect form data
      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());

      try {
        // Track with GTM
        if (typeof window !== 'undefined' && (window as any).dataLayer) {
          (window as any).dataLayer.push({
            event: 'waitlist_submit',
            formData: {
              industry: data.industry,
              expectedVolume: data.expectedVolume
            }
          });
        }

        // Add UTM parameters if they exist
        const urlParams = new URLSearchParams(window.location.search);
        const submissionData = {
          fullName: data.fullName,
          companyName: data.companyName,
          email: data.email,
          industry: data.industry,
          expectedVolume: data.expectedVolume,
          useCase: data.useCase || undefined,
          couponCode: data.couponCode || undefined,
          ndaConsent: data.ndaConsent === 'on', // Convert checkbox to boolean
          referrer: document.referrer,
          utmSource: urlParams.get('utm_source') || undefined,
          utmMedium: urlParams.get('utm_medium') || undefined,
          utmCampaign: urlParams.get('utm_campaign') || undefined,
        };

        // Submit to API endpoint
        const response = await fetch('/api/waitlist', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(submissionData),
        });

        const result = await response.json();

        if (response.ok && result.success) {
          // Redirect to thank-you page
          window.location.href = '/thank-you';
        } else {
          // Handle specific error codes
          if (result.code === 'RATE_LIMIT_EXCEEDED') {
            showMessage(result.error || 'Too many submissions. Please wait a minute and try again.', 'error');
          } else if (result.code === 'DUPLICATE_EMAIL') {
            showMessage('You\'re already on the waitlist! We\'ll contact you soon.', 'info');
          } else if (result.details) {
            // Validation errors
            const errors = Object.entries(result.details)
              .map(([field, messages]) => `${field}: ${(messages as string[]).join(', ')}`)
              .join('\n');
            showMessage(`Please correct the following errors:\n${errors}`, 'error');
          } else {
            showMessage(result.error || 'There was an error submitting your request. Please try again.', 'error');
          }
        }
      } catch (error) {
        console.error('Form submission error:', error);
        showMessage('Unable to connect to our servers. Please check your connection and try again, or contact us directly at mo@qdaria.com', 'error');
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Join Waitlist';
      }
    });
  }

  function showMessage(message: string, type: 'success' | 'error' | 'info') {
    if (!formMessages) return;

    formMessages.textContent = message;
    if (type === 'success') {
      formMessages.className = 'p-4 mb-6 rounded-lg bg-green-900/20 border border-green-500/30 text-green-300';
    } else if (type === 'info') {
      formMessages.className = 'p-4 mb-6 rounded-lg bg-blue-900/20 border border-blue-500/30 text-blue-300';
    } else {
      formMessages.className = 'p-4 mb-6 rounded-lg bg-red-900/20 border border-red-500/30 text-red-300';
    }
  }

  // Show sticky CTA after scrolling past hero
  window.addEventListener('scroll', () => {
    const stickyCta = document.getElementById('sticky-beta-cta');
    if (window.scrollY > 800) {
      stickyCta?.classList.remove('hidden');
    } else {
      stickyCta?.classList.add('hidden');
    }
  });
</script>
