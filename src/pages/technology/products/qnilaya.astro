---
import BaseLayout from "../../../layouts/BaseLayout.astro";

const features = [
  {
    title: "Quantum Neural Networks",
    description: "Advanced quantum-inspired neural networks for complex pattern recognition and data analysis.",
    icon: "brain"
  },
  {
    title: "Adaptive Learning",
    description: "Self-optimizing algorithms that continuously improve based on real-world data and feedback.",
    icon: "learn"
  },
  {
    title: "Hybrid Processing",
    description: "Seamless integration of classical and quantum computing resources for optimal performance.",
    icon: "hybrid"
  },
  {
    title: "Scalable Architecture",
    description: "Built to scale from small deployments to enterprise-wide implementations.",
    icon: "scale"
  }
];

const applications = [
  {
    title: "Healthcare Analytics",
    points: [
      "Medical image analysis",
      "Patient outcome prediction",
      "Drug interaction modeling",
      "Treatment optimization"
    ]
  },
  {
    title: "Scientific Research",
    points: [
      "Data pattern discovery",
      "Experimental design",
      "Results validation",
      "Hypothesis generation"
    ]
  },
  {
    title: "Industrial Applications",
    points: [
      "Process optimization",
      "Quality control",
      "Predictive maintenance",
      "Resource allocation"
    ]
  }
];

const specifications = [
  {
    category: "Performance",
    details: [
      "Real-time processing",
      "Multi-GPU acceleration",
      "Distributed computing",
      "Quantum circuit optimization"
    ]
  },
  {
    category: "Integration",
    details: [
      "REST API endpoints",
      "Python SDK support",
      "Cloud deployment ready",
      "Container orchestration"
    ]
  },
  {
    category: "Security",
    details: [
      "Data encryption",
      "Access control",
      "Audit logging",
      "Compliance features"
    ]
  }
];
---

<BaseLayout 
  title="Qnilaya - Quantum-Enhanced AI Platform"
  description="Advanced quantum-inspired artificial intelligence platform combining neural networks with quantum computing capabilities for breakthrough performance in complex analytics and decision-making."
>
  <main class="relative bg-dark-bg">
    <!-- Hero Section -->
    <section class="pt-32 pb-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-base-950 to-base-900">
      <div class="max-w-7xl mx-auto">
        <h1 class="mb-8 flex justify-center md:justify-start">
          <img
            src="/icons/logos/QNilaya.svg"
            alt="QNilaya"
            class="w-[300px] md:w-[400px] h-auto brightness-0 invert"
          />
        </h1>
        
        <p class="text-2xl text-base-200 max-w-3xl mb-12">
          Advanced quantum-inspired artificial intelligence platform combining neural networks with quantum computing capabilities for breakthrough performance in complex analytics and decision-making.
        </p>

        <div class="flex gap-6">
          <a href="/contact" class="inline-block px-8 py-4 text-lg font-semibold text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition">
            Request Demo
          </a>
          <a href="#features" class="inline-block px-8 py-4 text-lg font-semibold text-white border-2 border-white hover:bg-white hover:text-base-950 rounded-lg transition">
            Learn More
          </a>
        </div>
      </div>
    </section>

    <!-- Key Features -->
    <section id="features" class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-white text-center mb-16">
          Platform Features
        </h2>

        <div class="grid md:grid-cols-2 gap-8">
          {features.map((feature) => (
            <div class="feature-card rounded-xl p-8 transition-transform duration-300 hover:scale-105">
              <h3 class="text-2xl font-bold text-white mb-4">
                {feature.title}
              </h3>
              <p class="text-base-300">
                {feature.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Applications -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-white text-center mb-16">
          Industry Applications
        </h2>

        <div class="grid md:grid-cols-3 gap-8">
          {applications.map((app) => (
            <div class="feature-card rounded-xl p-8 transition-transform duration-300 hover:scale-105">
              <h3 class="text-2xl font-bold text-white mb-6">
                {app.title}
              </h3>
              <ul class="space-y-4">
                {app.points.map((point) => (
                  <li class="flex items-start">
                    <span class="text-primary-400 mr-2">•</span>
                    <span class="text-base-300">{point}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Technical Specifications -->
    <section class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-white text-center mb-16">
          Technical Specifications
        </h2>

        <div class="grid md:grid-cols-3 gap-8">
          {specifications.map((spec) => (
            <div class="feature-card rounded-xl p-8 transition-transform duration-300 hover:scale-105">
              <h3 class="text-2xl font-bold text-white mb-6">
                {spec.category}
              </h3>
              <ul class="space-y-4">
                {spec.details.map((detail) => (
                  <li class="flex items-start">
                    <span class="text-primary-400 mr-2">•</span>
                    <span class="text-base-300">{detail}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Success Story Preview -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-4xl font-bold text-white mb-8">
            Success Story
          </h2>
          <blockquote class="text-xl text-base-300 mb-12">
            "Qnilaya's quantum-enhanced AI platform revolutionized our research capabilities, reducing analysis time by 80% while uncovering previously hidden patterns in our data."
          </blockquote>
          <p class="text-base-400 italic">
            - Coming March 2025
          </p>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl font-bold text-white mb-8">
          Transform Your Analytics
        </h2>
        <p class="text-xl text-base-300 mb-12 max-w-3xl mx-auto">
          Ready to harness the power of quantum-enhanced AI? Contact us to schedule a demo and discover how Qnilaya can revolutionize your data analysis capabilities.
        </p>
        <div class="flex justify-center gap-6">
          <a href="/contact" class="inline-block px-8 py-4 text-lg font-semibold text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition">
            Schedule Demo
          </a>
          <a href="/contact#sales" class="inline-block px-8 py-4 text-lg font-semibold text-primary-400 hover:text-primary-300 rounded-lg transition">
            Contact Sales
          </a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .feature-card {
    @apply relative rounded-2xl border border-primary-500/30 bg-dark-bg/80 backdrop-blur-sm transition-all duration-500 overflow-visible;
    box-shadow: 0 0 25px rgba(4, 163, 255, 0.4);

    &:hover {
      box-shadow: 0 0 50px rgba(4, 163, 255, 0.6);
      transform: translateY(-4px) scale(1.02);
      @apply border-primary-500/50 bg-dark-bg/90;
      animation: pulse-card 2s ease-in-out infinite;
    }

    @keyframes pulse-card {
      0%,
      100% {
        box-shadow: 0 0 50px rgba(4, 163, 255, 0.6);
      }
      50% {
        box-shadow: 0 0 70px rgba(4, 163, 255, 0.8);
      }
    }

    &::before {
      content: "";
      @apply absolute inset-0 rounded-2xl;
      background: radial-gradient(
        800px circle at var(--mouse-x, 0) var(--mouse-y, 0),
        rgba(4, 163, 255, 0.15),
        transparent 40%
      );
      opacity: 0;
      transition: opacity 0.5s;
    }

    &:hover::before {
      opacity: 1;
    }
  }
</style>