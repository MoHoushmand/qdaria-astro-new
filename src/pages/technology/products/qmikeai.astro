---
import BaseLayout from "@layouts/BaseLayout.astro";

const pageTitle = "QMikeAI - Quantum-Enhanced CFD & HPC";
const pageDescription = "Revolutionary quantum-enhanced computational fluid dynamics and high-performance computing for weather forecasting and turbulence research";

const overview = [
  {
    title: "Weather Forecasting",
    description: "Improve weather forecasting accuracy with quantum-enhanced modeling."
  },
  {
    title: "Turbulence Analysis",
    description: "Revolutionize turbulence modeling and analysis with quantum computing."
  },
  {
    title: "PDE Solving",
    description: "Solve complex partial differential equations more efficiently."
  },
  {
    title: "Continuum Simulations",
    description: "Enhance continuum mechanics simulations with quantum resources."
  }
];

const features = [
  {
    title: "Quantum-Enhanced DNS",
    description: "Direct Numerical Simulation powered by quantum algorithms."
  },
  {
    title: "Hybrid Optimization",
    description: "Seamless integration of classical and quantum computing resources."
  },
  {
    title: "Real-Time Analysis",
    description: "Analyze weather patterns in real-time using quantum-inspired methods."
  },
  {
    title: "Turbulence Research",
    description: "Advanced turbulence research capabilities enabled by quantum computing."
  }
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="relative bg-dark-bg">
    <!-- Hero Section -->
    <section class="pt-32 pb-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-base-950 to-base-900">
      <div class="max-w-7xl mx-auto">
        <h1 class="mb-8 flex justify-center md:justify-start">
          <img
            src="/icons/logos/QMikeAI.svg"
            alt="QMikeAI"
            class="w-[300px] md:w-[400px] h-auto brightness-0 invert"
          />
        </h1>
        
        <p class="text-2xl text-base-200 max-w-3xl mb-12">
          Revolutionary quantum-enhanced computational fluid dynamics and high-performance computing for weather forecasting and turbulence research.
        </p>

        <div class="flex gap-6">
          <a href="/contact" class="inline-block px-8 py-4 text-lg font-semibold text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition">
            Request Demo
          </a>
          <a href="#overview" class="inline-block px-8 py-4 text-lg font-semibold text-white border-2 border-white hover:bg-white hover:text-base-950 rounded-lg transition">
            Learn More
          </a>
        </div>
      </div>
    </section>

    <!-- Overview -->
    <section id="overview" class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-white text-center mb-16">
          Overview
        </h2>

        <div class="grid md:grid-cols-2 gap-8">
          {overview.map((item) => (
            <div class="feature-card rounded-xl p-8 transition-transform duration-300 hover:scale-105">
              <h3 class="text-2xl font-bold text-white mb-4">
                {item.title}
              </h3>
              <p class="text-base-300">
                {item.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Key Features -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-white text-center mb-16">
          Key Features
        </h2>

        <div class="grid md:grid-cols-2 gap-8">
          {features.map((feature) => (
            <div class="feature-card rounded-xl p-8 transition-transform duration-300 hover:scale-105">
              <h3 class="text-2xl font-bold text-white mb-4">
                {feature.title}
              </h3>
              <p class="text-base-300">
                {feature.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Success Story Preview -->
    <section class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-4xl font-bold text-white mb-8">
            Success Story
          </h2>
          <blockquote class="text-xl text-base-300 mb-12">
            "QMikeAI's quantum-enhanced turbulence modeling enabled us to accurately predict extreme weather events months in advance, saving countless lives and billions in damages."
          </blockquote>
          <p class="text-base-400 italic">
            - Coming April 2026
          </p>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl font-bold text-white mb-8">
          Revolutionize Your Simulations
        </h2>
        <p class="text-xl text-base-300 mb-12 max-w-3xl mx-auto">
          Ready to experience the power of quantum-enhanced CFD and HPC? Contact us to schedule a demo and discover how QMikeAI can transform your simulations and forecasting capabilities.
        </p>
        <div class="flex justify-center gap-6">
          <a href="/contact" class="inline-block px-8 py-4 text-lg font-semibold text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition">
            Schedule Demo
          </a>
          <a href="/contact#sales" class="inline-block px-8 py-4 text-lg font-semibold text-primary-400 hover:text-primary-300 rounded-lg transition">
            Contact Sales
          </a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .feature-card {
    @apply relative rounded-2xl border border-primary-500/30 bg-dark-bg/80 backdrop-blur-sm transition-all duration-500 overflow-visible;
    box-shadow: 0 0 25px rgba(4, 163, 255, 0.4);

    &:hover {
      box-shadow: 0 0 50px rgba(4, 163, 255, 0.6);
      transform: translateY(-4px) scale(1.02);
      @apply border-primary-500/50 bg-dark-bg/90;
      animation: pulse-card 2s ease-in-out infinite;
    }

    @keyframes pulse-card {
      0%,
      100% {
        box-shadow: 0 0 50px rgba(4, 163, 255, 0.6);
      }
      50% {
        box-shadow: 0 0 70px rgba(4, 163, 255, 0.8);
      }
    }

    &::before {
      content: "";
      @apply absolute inset-0 rounded-2xl;
      background: radial-gradient(
        800px circle at var(--mouse-x, 0) var(--mouse-y, 0),
        rgba(4, 163, 255, 0.15),
        transparent 40%
      );
      opacity: 0;
      transition: opacity 0.5s;
    }

    &:hover::before {
      opacity: 1;
    }
  }
</style>