---
import BaseLayout from "../../../layouts/BaseLayout.astro";

const features = [
  {
    title: "Virtual Quantum Labs",
    description: "Interactive simulations of quantum circuits and algorithms, providing hands-on experience with quantum computing concepts.",
    icon: "lab"
  },
  {
    title: "AI-Powered Tutoring",
    description: "Personalized learning paths with adaptive AI tutors that adjust to your pace and learning style.",
    icon: "ai"
  },
  {
    title: "Industry Certifications",
    description: "High-end, industry-specific certifications recognized by leading quantum computing organizations.",
    icon: "certificate"
  },
  {
    title: "Real-time Collaboration",
    description: "Interactive tools for group projects and peer learning in quantum computing.",
    icon: "collaboration"
  }
];

const certifications = [
  {
    title: "Quantum Computing Fundamentals",
    level: "Foundation",
    duration: "3 months",
    topics: [
      "Quantum Mechanics Basics",
      "Quantum Gates and Circuits",
      "Quantum Algorithms",
      "Quantum Programming"
    ]
  },
  {
    title: "Quantum Software Development",
    level: "Advanced",
    duration: "6 months",
    topics: [
      "Quantum Algorithm Design",
      "Quantum Error Correction",
      "Quantum Software Optimization",
      "Industry Applications"
    ]
  },
  {
    title: "Quantum Industry Specialist",
    level: "Professional",
    duration: "12 months",
    topics: [
      "Quantum Finance",
      "Quantum Cryptography",
      "Quantum Machine Learning",
      "Industry Project Implementation"
    ]
  }
];

const tools = [
  {
    name: "Quantum Circuit Designer",
    description: "Visual interface for creating and testing quantum circuits with real-time simulation feedback.",
    category: "Development"
  },
  {
    name: "Algorithm Visualizer",
    description: "Interactive tool for understanding quantum algorithms through step-by-step visualization.",
    category: "Learning"
  },
  {
    name: "Quantum Playground",
    description: "Sandbox environment for experimenting with quantum concepts and code implementations.",
    category: "Practice"
  },
  {
    name: "Assessment Center",
    description: "Comprehensive testing platform with industry-standard certification exams.",
    category: "Certification"
  }
];
---

<BaseLayout 
  title="QDiana - Advanced Quantum Computing Education Platform"
  description="Accelerate your quantum computing journey with our innovative educational platform, offering high-end, industry-specific certifications and personalized learning experiences."
>
  <main class="relative">
    <!-- Hero Section -->
    <section class="pt-32 pb-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-base-950 to-base-900">
      <div class="max-w-7xl mx-auto">
        <h1 class="mb-8 flex justify-center md:justify-start">
          <img
            src="/icons/logos/QDiana.svg"
            alt="QDiana"
            class="w-[300px] md:w-[400px] h-auto brightness-0 invert"
          />
        </h1>
        
        <p class="text-2xl text-base-200 max-w-3xl mb-12">
          Accelerate your quantum computing journey with our innovative educational platform, offering high-end, industry-specific certifications and personalized learning experiences.
        </p>

        <div class="flex gap-6">
          <a href="/contact" class="inline-block px-8 py-4 text-lg font-semibold text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition">
            Start Learning
          </a>
          <a href="#features" class="inline-block px-8 py-4 text-lg font-semibold text-white border-2 border-white hover:bg-white hover:text-base-950 rounded-lg transition">
            Explore Features
          </a>
        </div>
      </div>
    </section>

    <!-- Key Features -->
    <section id="features" class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
          Platform Features
        </h2>

        <div class="grid md:grid-cols-2 gap-8">
          {features.map((feature) => (
            <div class="p-8 rounded-xl bg-white dark:bg-base-800">
              <h3 class="text-2xl font-bold text-base-950 dark:text-white mb-4">
                {feature.title}
              </h3>
              <p class="text-base-700 dark:text-base-300">
                {feature.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Certifications -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
          Professional Certifications
        </h2>

        <div class="grid md:grid-cols-3 gap-8">
          {certifications.map((cert) => (
            <div class="p-8 rounded-xl bg-white dark:bg-base-800 h-full">
              <h3 class="text-2xl font-bold text-base-950 dark:text-white mb-4">
                {cert.title}
              </h3>
              <div class="mb-6">
                <span class="inline-block px-3 py-1 text-sm font-medium text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/20 rounded-full">
                  {cert.level}
                </span>
                <span class="ml-2 text-base-600 dark:text-base-400">
                  {cert.duration}
                </span>
              </div>
              <ul class="space-y-3">
                {cert.topics.map((topic) => (
                  <li class="flex items-start">
                    <span class="text-primary-600 dark:text-primary-400 mr-2">â€¢</span>
                    <span class="text-base-700 dark:text-base-300">{topic}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Learning Tools -->
    <section class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-base-950 dark:text-white text-center mb-16">
          Interactive Learning Tools
        </h2>

        <div class="grid md:grid-cols-2 gap-8">
          {tools.map((tool) => (
            <div class="p-8 rounded-xl bg-white dark:bg-base-800">
              <div class="mb-4">
                <span class="inline-block px-3 py-1 text-sm font-medium text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/20 rounded-full">
                  {tool.category}
                </span>
              </div>
              <h3 class="text-2xl font-bold text-base-950 dark:text-white mb-4">
                {tool.name}
              </h3>
              <p class="text-base-700 dark:text-base-300">
                {tool.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Success Story Preview -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-4xl font-bold text-base-950 dark:text-white mb-8">
            Success Story
          </h2>
          <blockquote class="text-xl text-base-700 dark:text-base-300 mb-12">
            "QDiana increased student engagement in quantum physics courses by 60% at our university, providing an intuitive and comprehensive learning experience."
          </blockquote>
          <p class="text-base-600 dark:text-base-400 italic">
            - Coming February 2025
          </p>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-20 bg-base-50 dark:bg-base-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl font-bold text-base-950 dark:text-white mb-8">
          Begin Your Quantum Journey
        </h2>
        <p class="text-xl text-base-700 dark:text-base-300 mb-12 max-w-3xl mx-auto">
          Ready to advance your career in quantum computing? Join QDiana and gain access to world-class education and certification programs.
        </p>
        <div class="flex justify-center gap-6">
          <a href="/contact" class="inline-block px-8 py-4 text-lg font-semibold text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition">
            Enroll Now
          </a>
          <a href="/contact#demo" class="inline-block px-8 py-4 text-lg font-semibold text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 rounded-lg transition">
            Request Demo
          </a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
