---
// This is a standalone layout for the pitch deck only
// It doesn't include the main site's navbar or other components
import '../components/pitch-deck/styles/brand.css';
import '../components/pitch-deck/styles/chart-system.css';
import '../components/pitch-deck/styles/mobile-responsive.css';

interface Props {
  title?: string;
}

const { title = "QDaria Pitch Deck" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="pitch-deck">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style is:global>
      /* Reset styles to prevent inheritance from main site */
      html, body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        overflow-y: auto;
        -webkit-overflow-scrolling: touch;
      }

      /* Mobile-friendly responsive container */
      .pitch-deck-container {
        position: relative;
        width: 100%;
        min-height: 100vh;
      }

      /* Desktop: fixed layout */
      @media (min-width: 769px) {
        html, body {
          height: 100vh;
          overflow: hidden;
        }

        .pitch-deck-container {
          position: fixed;
          top: 0;
          left: 0;
          width: 100vw;
          height: 100vh;
          overflow: hidden;
        }
      }

      /* Mobile: scrollable layout */
      @media (max-width: 768px) {
        html, body {
          overflow-y: auto !important;
          height: auto !important;
        }

        .pitch-deck-container {
          position: relative !important;
          overflow-y: auto !important;
        }
      }
    </style>
  </head>
  <body>
    <div class="pitch-deck-container">
      <slot />
    </div>
  </body>
</html>
