---
import { type CollectionEntry, getEntries } from "astro:content";
import { Image } from "astro:assets";
import { getImage } from "astro:assets";
import { Icon } from "astro-icon/components";

// KaTeX CSS for math equations
import "katex/dist/katex.min.css";

// main layout
import BaseLayout from "./BaseLayout.astro";

// components
import Category from "../components/Category/Category.astro";
import Button from "../components/Button/Button.astro";
import TableOfContents from "../components/TableOfContents/TableOfContents.astro";

// utils
import { formatDate, humanize, slugify } from "../js/textUtils";
import { getLocaleFromUrl } from "../js/localeUtils";
import { useTranslations } from "../js/translationUtils";

interface Author {
  name: string;
  role?: string;
  bio?: string;
  avatar: ImageMetadata;
  email?: string;
  linkedin?: string;
}

interface Props {
  post: CollectionEntry<"blog">;
  headings: { depth: number; slug: string; text: string }[];
}

const { post, headings } = Astro.props;
const {
  title,
  description,
  authors,
  categories,
  pubDate,
  updatedDate,
  heroImage,
} = post.data;

const currLocale = getLocaleFromUrl(Astro.url);
const t = useTranslations({ url: Astro.url, locals: { locale: currLocale } });
interface AuthorEntry {
  collection: "authors";
  id: string;
}

const authorEntries = authors 
  ? await getEntries(authors.map((author: string): AuthorEntry => ({ 
      collection: "authors", 
      id: author 
    }))) as CollectionEntry<"authors">[]
  : [];
---

<BaseLayout
  type="blog"
  title={title}
  description={description}
  image={heroImage}
  authorsData={authorEntries}
  postFrontmatter={post.data}
>
  <article class="site-container mt-20 md:mt-28">
    <!-- Blog post info -->
    <div class="flex w-full flex-col items-center">
      <div class="mx-auto flex w-full max-w-[800px]">
        <div class="mx-auto text-center">
          <nav class="flex w-full justify-center gap-3 md:text-lg">
            {categories.map((category: string) => (
              <Category category={category} />
            ))}
          </nav>

          <h1 class="h2 mt-4 text-gradient-blue">{title}</h1>

          <div class="mt-2 flex w-full flex-wrap justify-center gap-3">
            {authorEntries.map((authorData) => (
              <div class="mb-auto flex">
                <figure>
                  <img
                    src={authorData.data.avatar}
                    alt={`${authorData.data.name} avatar`}
                    width="100"
                    height="100"
                    class="h-7 w-7 rounded-full border border-base-300 object-cover dark:border-base-700"
                  />
                </figure>
                <div class="my-auto ml-2">{authorData.data.name}</div>
              </div>
            ))}
            <div class="my-auto">&bull;</div>
            <time class="my-auto h-full" datetime={pubDate.toISOString()}>
              {formatDate(pubDate, currLocale)}
            </time>
          </div>
        </div>
      </div>

      <!-- blog post main image -->
      <div
        class="mt-6 overflow-hidden rounded-xl border border-base-300 dark:border-base-700"
      >
        <img
          src={heroImage}
          alt={`Cover for ${title}`}
          width="1408"
          height="800"
          class="max-h-[70vh] w-full object-cover"
          loading="eager"
        />
      </div>
    </div>

    <!-- article content -->
    <div class="mt-10 w-full">
      <div
        class="mx-auto flex max-w-2xl flex-col gap-6 lg:grid lg:max-w-none lg:grid-cols-12"
      >
        <!-- left sidebar -->
        <aside class="hidden lg:col-span-2 lg:block">
          <div class="sticky top-20">
            <div class="h-[calc(100vh-6rem)] overflow-y-auto">
              <!-- You can put a CTA or whatever else you want here -->
              <!-- <div class="h-full w-full bg-blue-500"></div> -->
            </div>
          </div>
        </aside>

        <!-- Content -->
        <div class="text-base-content text-base lg:col-span-7">
          {
            updatedDate && (
              <div class="mb-6 italic">
                <time datetime={updatedDate.toISOString()}>
                  Updated: {formatDate(updatedDate, currLocale)}
                </time>
              </div>
            )
          }
          <section id="blog-post-content" class="blog-prose prose prose-invert mx-auto md:text-lg">
            <slot />
          </section>

          <!-- button to go back to all posts -->
          <div class="mt-10 flex justify-center">
            <Button variant="outline" href="/blog/" arrow="left">
              Back to all posts
            </Button>
          </div>
        </div>

        <!-- Table of Contents sidebar -->
        <aside class="hidden lg:col-span-3 lg:block">
          <div class="sticky top-20">
            <div class="h-[calc(100vh-6rem)] overflow-y-auto">
              <TableOfContents headings={headings} levels={3} />
            </div>
          </div>
        </aside>
      </div>
    </div>
  </article>
</BaseLayout>

<style is:global>
  .text-gradient-blue {
    @apply bg-gradient-to-r from-[#04a3ff] via-[#00ffd3] to-[#65ff00] bg-clip-text text-transparent;
    filter: brightness(1.8) saturate(1.4);
  }

  .blog-prose {
    /* Headings with brand gradient on hover */
    & h1, & h2, & h3, & h4 {
      @apply font-semibold text-base-100;
      transition: all 0.3s ease;
    }

    & h2 {
      @apply mt-12 mb-5 text-2xl md:text-3xl;
      @apply bg-gradient-to-r from-[#04a3ff] to-[#00ffd3] bg-clip-text text-transparent;
    }

    & h3 {
      @apply mt-10 mb-4 text-xl md:text-2xl text-primary-400;
    }

    & h4 {
      @apply mt-8 mb-3 text-lg md:text-xl text-primary-300;
    }

    /* Paragraphs and text */
    & p {
      @apply text-base-300 leading-relaxed mb-5;
    }

    & strong {
      @apply text-base-100 font-semibold;
    }

    /* Links */
    & a {
      @apply text-primary-400 underline decoration-primary-400/30 underline-offset-2;
      @apply hover:text-primary-300 hover:decoration-primary-300;
      transition: all 0.2s ease;
    }

    /* Lists */
    & ul, & ol {
      @apply text-base-300 mb-5;
    }

    & li::marker {
      @apply text-primary-500;
    }

    & li {
      @apply mb-2;
    }

    /* Code blocks */
    & pre {
      @apply rounded-xl border border-white/10 bg-base-950 my-6;
    }

    & code {
      @apply text-primary-300;
    }

    /* Blockquotes */
    & blockquote {
      @apply border-l-4 border-primary-500 bg-base-900/50 pl-4 italic text-base-300 my-6;
    }

    /* Inline code (backticks) - like JupyterBook */
    & :not(pre) > code {
      @apply rounded-md bg-primary-500/20 px-1.5 py-0.5 text-primary-300 font-mono text-[0.9em];
      border: 1px solid rgba(4, 163, 255, 0.2);
    }

    /* Math equations (KaTeX) - JupyterBook-style inline code appearance */
    /* Display math - centered block with subtle background */
    & .katex-display {
      @apply my-6 overflow-x-auto rounded-xl py-4 px-5;
      @apply bg-primary-500/10;
      border: 1px solid rgba(4, 163, 255, 0.2);
    }

    & .katex {
      @apply text-base-100;
      font-size: 1.1em;
    }

    & .katex-display > .katex {
      font-size: 1.2em;
    }

    /* Inline math - JupyterBook style like `Anyons` */
    & .katex-inline,
    & p .katex,
    & li .katex,
    & td .katex {
      @apply rounded-md bg-primary-500/20 px-1.5 py-0.5 text-primary-200;
      border: 1px solid rgba(4, 163, 255, 0.2);
      font-size: 0.95em;
    }

    /* Inline math and numbers styling */
    & sup, & sub {
      @apply text-primary-300;
    }

    /* Style bold numbers/results like RÂ² = 0.784 */
    & strong {
      @apply text-base-100;
    }

    /* Mathematical expressions in bold get special treatment */
    & strong:has(sup),
    & p strong {
      @apply font-mono;
    }

    /* Style standalone equations/formulas */
    & p:has(strong:only-child) {
      @apply my-6 text-center;
    }

    /* Highlight key metrics/numbers */
    & strong em,
    & em strong {
      @apply text-primary-400 not-italic;
    }

    /* Figure container - simple border glow like Amplify cards */
    & p:has(> img) {
      @apply rounded-xl overflow-hidden my-6;
      border: 1px solid rgba(255, 255, 255, 0.1);
      transition: all 300ms;
    }

    & p:has(> img):hover {
      border-color: #7dd3fc;
      box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
    }

    /* Images inside figure containers */
    & img {
      @apply rounded-t-xl block w-full;
      height: auto;
    }

    /* Figure captions - attached to bottom of figure */
    & img + em {
      @apply block px-4 py-3 text-center text-sm;
      @apply text-base-400 not-italic leading-relaxed;
      @apply rounded-b-xl;
      background: rgba(30, 41, 59, 0.6);
      border-top: 1px solid rgba(255, 255, 255, 0.05);
      margin: 0;
    }

    & img + em strong {
      @apply text-primary-400 font-semibold;
    }

    /* Standalone figure element - simple border glow */
    & figure {
      @apply rounded-xl overflow-hidden my-6;
      border: 1px solid rgba(255, 255, 255, 0.1);
      transition: all 300ms;
    }

    & figure:hover {
      border-color: #7dd3fc;
      box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
    }

    & figcaption {
      @apply block px-4 py-3 text-center text-sm;
      @apply text-base-400 leading-relaxed;
      background: rgba(30, 41, 59, 0.6);
      border-top: 1px solid rgba(255, 255, 255, 0.05);
    }

    & figcaption strong {
      @apply text-primary-400 font-semibold;
    }

    /* Tables */
    & table {
      @apply w-full border-collapse my-8 rounded-xl overflow-hidden;
      border: 1px solid rgba(4, 163, 255, 0.2);
    }

    & th {
      @apply bg-base-900 text-primary-400 font-semibold px-4 py-3 text-left;
      border-bottom: 1px solid rgba(4, 163, 255, 0.2);
    }

    & td {
      @apply border-t border-white/10 px-4 py-3 text-base-300;
    }

    & tr:hover td {
      @apply bg-base-900/50;
    }

    /* Horizontal rules */
    & hr {
      @apply my-12 border-0 h-px;
      background: linear-gradient(90deg, transparent, rgba(4, 163, 255, 0.3), transparent);
    }
  }
</style>
